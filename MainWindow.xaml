                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <Button Content="➕ 新增圖片" 
            Width="120" 
            HorizontalAlignment="Left"
            Click="AddImage_Click" 
            Padding="8,4"
            Background="#4CAF50" 
            Foreground="White" 
            BorderThickness="0"/>

                            <Border BorderBrush="#DDD" 
            BorderThickness="0,0,0,1" 
            Margin="0,15"/>

                            <!-- ===== 提示區塊 ===== -->

                            <Border Background="#F0F8FF" 
            Padding="12" 
            Margin="0,15,0,0" 
            CornerRadius="3">
                                <StackPanel>
                                    <TextBlock Text="💡 提示" 
                       FontWeight="Bold" 
                       FontSize="11" 
                       Margin="0,0,0,4"/>
                                    <TextBlock TextWrapping="Wrap" 
                       FontSize="10" 
                       Foreground="#333"
                       xml:space="preserve">• ID 格式: {角色1_id}_{角色2_id}
• 名稱格式: {角色1名稱}&amp;{角色2名稱}
• 陣營固定為 "a jinxed"
• 夜晚順序、提示標記等欄位自動使用預設值</TextBlock>
                                </StackPanel>
                            </Border>

                        </StackPanel>
                    </Grid>

                </ScrollViewer>

                <!-- 未選擇角色時的提示 -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedRole}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <TextBlock Text="📋" FontSize="72" HorizontalAlignment="Center" Opacity="0.3"/>
                    <TextBlock Text="請從左側選擇一個角色進行編輯" 
                   FontSize="16" Foreground="Gray" 
                   HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- 狀態列 -->
        <StatusBar Grid.Row="2" Background="#F0F0F0">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage, Mode=OneWay}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock>
                    <Run Text="選中: "/>
                    <Run Text="{Binding SelectedRole.Name, Mode=OneWay, TargetNullValue='無'}"/>
                </TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>