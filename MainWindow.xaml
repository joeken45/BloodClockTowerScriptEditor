<Window x:Class="BloodClockTowerScriptEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BloodClockTowerScriptEditor"
        xmlns:models="clr-namespace:BloodClockTowerScriptEditor.Models"
        xmlns:converters="clr-namespace:BloodClockTowerScriptEditor.Converters"
        mc:Ignorable="d"
        Title="Blood on the Clocktower 劇本編輯器" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- 轉換器 -->
        <converters:TeamTypeConverter x:Key="TeamTypeConverter"/>
        <converters:NullToBooleanConverter x:Key="NullToBooleanConverter"/>

        <!-- 陣營顏色 -->
        <SolidColorBrush x:Key="TownsfolkBrush" Color="#368CE1"/>
        <SolidColorBrush x:Key="OutsiderBrush" Color="#71A8D6"/>
        <SolidColorBrush x:Key="MinionBrush" Color="#DC3545"/>
        <SolidColorBrush x:Key="DemonBrush" Color="#8B0000"/>
        <SolidColorBrush x:Key="TravelerBrush" Color="#808080"/>
        <SolidColorBrush x:Key="FabledBrush" Color="#FFC107"/>

        <!-- 標籤樣式 -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- 文字框樣式 -->
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- 多行文字框樣式 -->
        <Style x:Key="MultiLineTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource TextBoxStyle}">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="MinHeight" Value="80"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 選單列 -->
        <Menu Grid.Row="0">
            <MenuItem Header="檔案(_F)">
                <MenuItem Header="開啟(_O)" Command="{Binding LoadJsonCommand}"/>
                <MenuItem Header="儲存(_S)" Command="{Binding SaveJsonCommand}"/>
                <MenuItem Header="另存新檔(_A)" Command="{Binding SaveAsJsonCommand}"/>
                <Separator/>
                <MenuItem Header="結束(_X)" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="說明(_H)">
                <MenuItem Header="關於(_A)" Click="About_Click"/>
            </MenuItem>
        </Menu>

        <!-- 主要內容區 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左側面板: 篩選 + 按鈕 + 角色列表 -->
            <Border Grid.Column="0" BorderBrush="#DDD" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- 劇本資訊 -->
                        <RowDefinition Height="Auto"/>
                        <!-- 陣營篩選 -->
                        <RowDefinition Height="Auto"/>
                        <!-- 按鈕區 (新增) -->
                        <RowDefinition Height="*"/>
                        <!-- 角色列表 -->
                    </Grid.RowDefinitions>

                    <!-- 劇本資訊 -->
                    <Border Grid.Row="0" Margin="10" Background="#F5F5F5" Padding="10" BorderBrush="#CCC" BorderThickness="1">
                        <DockPanel>
                            <!-- 標題和按鈕 -->
                            <DockPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                                <TextBlock Text="劇本資訊" FontWeight="Bold" FontSize="14" 
                               DockPanel.Dock="Left" VerticalAlignment="Center"/>
                                <Button Content="✏️ 編輯" Padding="6,3" FontSize="11"
                            HorizontalAlignment="Right"
                            Command="{Binding EditScriptMetaCommand}"
                            Background="#FF4A90E2" Foreground="White" BorderThickness="0"/>
                            </DockPanel>

                            <!-- Logo 預覽和名稱 -->
                            <StackPanel HorizontalAlignment="Center">
                                <Border BorderBrush="#CCC" BorderThickness="1" Background="White" 
                            Height="80" Width="160" Margin="0,0,0,8">
                                    <Image Source="{Binding CurrentScript.Meta.Logo}" 
                               Stretch="Uniform" Margin="4"/>
                                </Border>

                                <TextBlock HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap">
                        <Run Text="{Binding CurrentScript.Meta.Name, Mode=OneWay}" FontWeight="SemiBold"/>
                        <Run Text=" by "/>
                        <Run Text="{Binding CurrentScript.Meta.Author, Mode=OneWay}"/>
                                </TextBlock>
                            </StackPanel>
                        </DockPanel>
                    </Border>

                    <!-- 陣營篩選 -->
                    <StackPanel Grid.Row="1" Margin="10">
                        <TextBlock Text="顯示類型" FontWeight="Bold" Margin="0,0,0,5"/>

                        <!-- 第一行 -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <CheckBox Content="鎮民" IsChecked="{Binding ShowTownsfolk}" Margin="0,0,15,0"/>
                            <CheckBox Content="外來者" IsChecked="{Binding ShowOutsiders}" Margin="0,0,15,0"/>
                            <CheckBox Content="爪牙" IsChecked="{Binding ShowMinions}" Margin="0,0,0,0"/>
                        </StackPanel>

                        <!-- 第二行 -->
                        <StackPanel Orientation="Horizontal">
                            <CheckBox Content="惡魔" IsChecked="{Binding ShowDemons}" Margin="0,0,15,0"/>
                            <CheckBox Content="旅行者" IsChecked="{Binding ShowTravelers}" Margin="0,0,15,0"/>
                            <CheckBox Content="傳奇/其他" IsChecked="{Binding ShowFabled}" Margin="0,0,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- 按鈕區 (新增) -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    Margin="10,5,10,10" HorizontalAlignment="Right">
                        <Button Content="➕" 
                    Command="{Binding AddFromOfficialTemplateCommand}"
                    Width="30" Height="30"
                    Background="#28A745" Foreground="White"
                    BorderThickness="0" Cursor="Hand"
                    FontSize="16" FontWeight="Bold"
                    Margin="0,0,5,0"
                    ToolTip="新增角色"/>

                        <Button Content="🗑️" 
                    Command="{Binding DeleteRoleCommand}"
                    Width="30" Height="30"
                    Background="#DC3545" Foreground="White"
                    BorderThickness="0" Cursor="Hand"
                    FontSize="16" FontWeight="Bold"
                    ToolTip="刪除角色"/>
                    </StackPanel>

                    <!-- 角色列表 -->
                    <ListBox Grid.Row="3" 
                 ItemsSource="{Binding FilteredRoles}"
                 SelectedItem="{Binding SelectedRole}"
                 Margin="10,0,10,10">

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <!-- 陣營色塊 -->
                                    <Border Width="4" Height="40" VerticalAlignment="Center" Margin="0,0,8,0">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Team}" Value="Townsfolk">
                                                        <Setter Property="Background" Value="{StaticResource TownsfolkBrush}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Team}" Value="Outsider">
                                                        <Setter Property="Background" Value="{StaticResource OutsiderBrush}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Team}" Value="Minion">
                                                        <Setter Property="Background" Value="{StaticResource MinionBrush}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Team}" Value="Demon">
                                                        <Setter Property="Background" Value="{StaticResource DemonBrush}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Team}" Value="Traveler">
                                                        <Setter Property="Background" Value="{StaticResource TravelerBrush}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Team}" Value="Fabled">
                                                        <Setter Property="Background" Value="{StaticResource FabledBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>

                                    <!-- 角色資訊 -->
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="13"/>
                                        <TextBlock Text="{Binding TeamDisplayName}" 
                                       FontSize="11" Foreground="Gray"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
            
            <!-- 分隔線 -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" 
                          Background="#DDD"/>

            <!-- 右側面板: 角色編輯區 -->
            <Grid Grid.Column="2">
                <!-- 角色編輯表單 (有選擇時顯示) -->
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ScrollViewer.Style>
                        <Style TargetType="ScrollViewer">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedRole}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ScrollViewer.Style>

                    <StackPanel Margin="20">
                        <!-- 標題 -->
                        <TextBlock Text="角色編輯" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
                        <Border BorderBrush="#DDD" BorderThickness="0,0,0,1" Margin="0,0,0,15"/>

                        <!-- 基本資訊 -->
                        <TextBlock Text="基本資訊" Style="{StaticResource LabelStyle}" FontSize="16"/>

                        <!-- 角色名稱 -->
                        <TextBlock Text="角色名稱" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding SelectedRole.Name, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource TextBoxStyle}"/>

                        <!-- 角色 ID -->
                        <TextBlock Text="角色 ID" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding SelectedRole.Id, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource TextBoxStyle}"/>

                        <!-- 角色類型選擇 -->
                        <TextBlock Text="角色類型" Style="{StaticResource LabelStyle}"/>
                        <ComboBox SelectedItem="{Binding SelectedRole.Team}" 
                                  FontSize="13" Padding="8,5">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource TeamTypeConverter}}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                            <models:TeamType>Townsfolk</models:TeamType>
                            <models:TeamType>Outsider</models:TeamType>
                            <models:TeamType>Minion</models:TeamType>
                            <models:TeamType>Demon</models:TeamType>
                            <models:TeamType>Traveler</models:TeamType>
                            <models:TeamType>Fabled</models:TeamType>
                            <models:TeamType>Jinxed</models:TeamType>
                        </ComboBox>

                        <!-- 能力描述 -->
                        <TextBlock Text="能力描述" Style="{StaticResource LabelStyle}" FontSize="16"/>
                        <TextBox Text="{Binding SelectedRole.Ability, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource MultiLineTextBoxStyle}"
                                 Height="100"/>

                        <Border BorderBrush="#DDD" BorderThickness="0,0,0,1" Margin="0,15"/>

                        <!-- 夜晚行動 -->
                        <TextBlock Text="夜晚行動順序" Style="{StaticResource LabelStyle}" FontSize="16"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="首夜順序 (0=不行動)" Style="{StaticResource LabelStyle}"/>
                                <TextBox Text="{Binding SelectedRole.FirstNight, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource TextBoxStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="其他夜晚順序" Style="{StaticResource LabelStyle}"/>
                                <TextBox Text="{Binding SelectedRole.OtherNight, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource TextBoxStyle}"/>
                            </StackPanel>
                        </Grid>

                        <!-- 影響設置 -->
                        <CheckBox Content="影響設置 (Setup)" 
                                  IsChecked="{Binding SelectedRole.Setup}" 
                                  Margin="0,15,0,0" FontSize="13"/>

                        <Border BorderBrush="#DDD" BorderThickness="0,0,0,1" Margin="0,15"/>

                        <!-- 說書人提示 -->
                        <TextBlock Text="說書人提示" Style="{StaticResource LabelStyle}" FontSize="16"/>

                        <TextBlock Text="首夜提示" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding SelectedRole.FirstNightReminder, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource MultiLineTextBoxStyle}"/>

                        <TextBlock Text="其他夜晚提示" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding SelectedRole.OtherNightReminder, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource MultiLineTextBoxStyle}"/>

                        <Border BorderBrush="#DDD" BorderThickness="0,0,0,1" Margin="0,15"/>

                        <!-- 其他資訊 -->
                        <TextBlock Text="其他資訊" Style="{StaticResource LabelStyle}" FontSize="16"/>

                        <TextBlock Text="圖片 URL" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding SelectedRole.Image, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource TextBoxStyle}"/>

                        <TextBlock Text="英文名稱 (選填)" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding SelectedRole.NameEng, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource TextBoxStyle}"/>

                        <TextBlock Text="風味文字 (選填)" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding SelectedRole.Flavor, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource MultiLineTextBoxStyle}"
                                 Height="60"/>

                        <!-- 底部說明 -->
                        <Border Background="#F0F8FF" Padding="15" Margin="0,20,0,0" CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="💡 編輯提示" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="#333">
                                    • 所有變更會即時儲存到記憶體中<LineBreak/>
                                    • 請記得點擊「檔案 > 儲存」將變更寫入檔案<LineBreak/>
                                    • 夜晚順序可使用小數 (如 3.5, 0.1)<LineBreak/>
                                    • 提示標記功能將在下個版本加入
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!-- 未選擇角色時的提示 -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedRole}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <TextBlock Text="📋" FontSize="72" HorizontalAlignment="Center" Opacity="0.3"/>
                    <TextBlock Text="請從左側選擇一個角色進行編輯" 
                               FontSize="16" Foreground="Gray" 
                               HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    <TextBlock Text="或點擊左側的 ➕ 按鈕新增角色"
                               FontSize="13" Foreground="Gray" 
                               HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- 狀態列 -->
        <StatusBar Grid.Row="2" Background="#F0F0F0">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage, Mode=OneWay}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock>
                    <Run Text="選中: "/>
                    <Run Text="{Binding SelectedRole.Name, Mode=OneWay, TargetNullValue='無'}"/>
                </TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>