<Window x:Class="BloodClockTowerScriptEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BloodClockTowerScriptEditor"
        xmlns:models="clr-namespace:BloodClockTowerScriptEditor.Models"
        xmlns:converters="clr-namespace:BloodClockTowerScriptEditor.Converters"
        mc:Ignorable="d"
        Title="Blood on the Clocktower 劇本編輯器" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- 轉換器 -->
        <converters:TeamTypeConverter x:Key="TeamTypeConverter"/>
        <converters:NullToBooleanConverter x:Key="NullToBooleanConverter"/>
        <converters:StringNotEmptyConverter x:Key="StringNotEmptyConverter"/>
        <converters:StringToImageSourceConverter x:Key="StringToImageSourceConverter"/>
        <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
        <converters:IntGreaterThanConverter x:Key="IntGreaterThanConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- 陣營顏色 -->
        <SolidColorBrush x:Key="TownsfolkBrush" Color="#368CE1"/>
        <SolidColorBrush x:Key="OutsiderBrush" Color="#71A8D6"/>
        <SolidColorBrush x:Key="MinionBrush" Color="#DC3545"/>
        <SolidColorBrush x:Key="DemonBrush" Color="#8B0000"/>
        <SolidColorBrush x:Key="TravelerBrush" Color="#808080"/>
        <SolidColorBrush x:Key="FabledBrush" Color="#FFC107"/>

        <!-- 標籤樣式 -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- 文字框樣式 -->
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- 多行文字框樣式 -->
        <Style x:Key="MultiLineTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource TextBoxStyle}">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="MinHeight" Value="80"/>
        </Style>

        <!-- 驗證錯誤樣式 -->
        <Style x:Key="ValidatedTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource TextBoxStyle}">
            <Style.Triggers>
                <!-- 當驗證失敗時顯示紅色邊框 -->
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="BorderBrush" Value="#F44336"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 選單列 -->
        <Menu Grid.Row="0">
            <MenuItem Header="檔案(_F)">
                <!-- 🆕 新增: 開啟新檔 -->
                <MenuItem Header="開啟新檔(_N)" 
                  Command="{Binding NewFileCommand}"
                  InputGestureText="Ctrl+N">
                    <MenuItem.Icon>
                        <TextBlock Text="📄" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>

                <Separator/>

                <!-- 原有的開啟舊檔 -->
                <MenuItem Header="開啟舊檔(_O)" 
                  Command="{Binding LoadJsonCommand}"
                  InputGestureText="Ctrl+O">
                    <MenuItem.Icon>
                        <TextBlock Text="📂" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>

                <Separator/>

                <!-- 原有的儲存檔案 -->
                <MenuItem Header="儲存檔案(_S)" 
                  Command="{Binding SaveJsonCommand}"
                  InputGestureText="Ctrl+S">
                    <MenuItem.Icon>
                        <TextBlock Text="💾" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>

                <!-- 原有的另存新檔 -->
                <MenuItem Header="另存新檔(_A)" 
                  Command="{Binding SaveAsJsonCommand}"
                  InputGestureText="Ctrl+Shift+S">
                    <MenuItem.Icon>
                        <TextBlock Text="📝" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>

                <Separator/>

                <!-- 原有的結束 -->
                <MenuItem Header="結束(_X)" Click="Exit_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="❌" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="說明(_H)">
                <MenuItem Header="關於(_A)" Click="About_Click"/>
            </MenuItem>
        </Menu>

        <!-- 主要內容區 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左側面板: 篩選 + 按鈕 + 角色列表/夜晚順序 -->
            <Border Grid.Column="0" BorderBrush="#DDD" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- 劇本資訊 -->
                        <RowDefinition Height="*"/>
                        <!-- TabControl (包含篩選+按鈕+列表) -->
                    </Grid.RowDefinitions>

                    <!-- 劇本資訊 -->
                    <Border Grid.Row="0" Margin="10" Background="#F5F5F5" Padding="10" BorderBrush="#CCC" BorderThickness="1">
                        <DockPanel>
                            <!-- 標題和按鈕 -->
                            <DockPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                                <TextBlock Text="劇本資訊" FontWeight="Bold" FontSize="14" 
                               DockPanel.Dock="Left" VerticalAlignment="Center"/>
                                <Button Content="✏️ 編輯" Padding="6,3" FontSize="11"
                            HorizontalAlignment="Right"
                            Command="{Binding EditScriptMetaCommand}"
                            Background="#FF4A90E2" Foreground="White" BorderThickness="0"/>
                            </DockPanel>

                            <!-- Logo 預覽和名稱 -->
                            <StackPanel HorizontalAlignment="Center">
                                <Border BorderBrush="#CCC" BorderThickness="1" Background="White" 
                            Height="80" Width="160" Margin="0,0,0,8">
                                    <Image Source="{Binding CurrentScript.Meta.Logo, Converter={StaticResource StringToImageSourceConverter}}"  
                               Stretch="Uniform" Margin="4"/>
                                </Border>
                                <TextBlock Text="{Binding CurrentScript.Meta.Name}" 
                               FontWeight="Bold" FontSize="13"
                               TextAlignment="Center" TextWrapping="Wrap"/>
                            </StackPanel>
                        </DockPanel>
                    </Border>

                    <!-- TabControl -->
                    <TabControl Grid.Row="1" Margin="10,0,10,10" >
                        <!-- Tab 1: 角色列表 (含篩選和按鈕) -->
                        <TabItem Header="角色列表">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <!-- 按鈕區 -->
                                    <RowDefinition Height="*"/>
                                    <!-- 分類區塊 -->
                                </Grid.RowDefinitions>

                                <!-- ✅ 按鈕區 -->
                                <Border Grid.Row="0" Background="#F5F5F5" Padding="8,10" Margin="0,0,0,10">
                                    <StackPanel>
                                        <!-- 第一行：展開/收合按鈕 -->
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                            <Button Content="📂 全部展開" Width="100" Height="30" Margin="0,0,5,0"
            Click="ExpandAll_Click"
            Background="#6c757d" Foreground="White" BorderThickness="0"
            FontSize="11" ToolTip="展開所有類別"/>
                                            <Button Content="📁 全部收合" Width="100" Height="30"
            Click="CollapseAll_Click"
            Background="#6c757d" Foreground="White" BorderThickness="0"
            FontSize="11" ToolTip="收合所有類別"/>
                                        </StackPanel>

                                        <!-- 第二行：新增/刪除按鈕 -->
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                            <Button Content="➕ 新增角色" Width="100" Height="30" Margin="0,0,5,0"
            Command="{Binding AddFromOfficialTemplateCommand}"
            Background="#4CAF50" Foreground="White" BorderThickness="0"
            FontSize="12" FontWeight="SemiBold"
            ToolTip="從範本新增角色"/>
                                            <Button Content="🗑️ 刪除角色" Width="100" Height="30"
            Command="{Binding RemoveRoleCommand}"
            Background="#F44336" Foreground="White" BorderThickness="0"
            FontSize="12" FontWeight="SemiBold"
            ToolTip="刪除選中的角色"/>
                                        </StackPanel>

                                        <!-- ✅ 第三行：偵測相剋按鈕（新增） -->
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="🔍 偵測相剋" Width="100" Height="30"
            Command="{Binding DetectJinxCommand}"
            Background="#2196F3" Foreground="White" BorderThickness="0"
            FontSize="12" FontWeight="SemiBold"
            ToolTip="偵測當前劇本中可能的相剋規則"/>
                                        </StackPanel>

                                    </StackPanel>
                                </Border>

                                <!-- ✅ 分類展開區塊 -->
                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                    <StackPanel>
                                        <!-- 🎨 鎮民 -->
                                        <Border x:Name="borderTownsfolk" BorderBrush="#368CE1" BorderThickness="2" Margin="0,0,0,10" CornerRadius="4"
                Visibility="{Binding TownsfolkCount, Converter={StaticResource CountToVisibilityConverter}}">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <Border Grid.Row="0" Background="#368CE1" Padding="10" Cursor="Hand"
                        MouseLeftButtonDown="TeamHeader_Click" Tag="Townsfolk">
                                                    <Grid>
                                                        <TextBlock FontWeight="Bold" Foreground="White">
                            <Run Text="鎮民 ("/>
                            <Run Text="{Binding TownsfolkCount, Mode=OneWay}"/>
                            <Run Text=")"/>
                                                        </TextBlock>
                                                        <TextBlock x:Name="iconTownsfolk" Text="▼" Foreground="White" 
                                   HorizontalAlignment="Right" FontSize="14"/>
                                                    </Grid>
                                                </Border>

                                                <ItemsControl x:Name="listTownsfolk" Grid.Row="1" 
                              ItemsSource="{Binding TownsfolkRoles}"
                              Background="White"
                              AllowDrop="True"
                              Drop="TeamList_Drop"
              DragOver="TeamList_DragOver"
              DragLeave="TeamList_DragLeave"
                              Tag="Townsfolk">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border BorderBrush="#EEE" BorderThickness="0,0,0,1" 
                                    Padding="10,8" Background="White"
                                    MouseLeftButtonDown="RoleItem_MouseDown"
                                    MouseMove="RoleItem_MouseMove"
                                    Cursor="Hand">
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                    </Grid.ColumnDefinitions>

                                                                    <TextBlock Grid.Column="0" Text="⋮⋮" 
                                               Foreground="#999" FontSize="14" 
                                               VerticalAlignment="Center" Margin="0,0,10,0"/>

                                                                    <Border Grid.Column="1" Width="40" Height="40" 
                                            Background="#F0F0F0" 
                                            BorderBrush="#368CE1" BorderThickness="1"
                                            Margin="0,0,10,0">
                                                                        <Image Source="{Binding ImageUrl, Converter={StaticResource StringToImageSourceConverter}}" 
                                               Stretch="Uniform"/>
                                                                    </Border>

                                                                    <TextBlock Grid.Column="2" Text="{Binding Name}" 
                                               VerticalAlignment="Center" 
                                               FontWeight="SemiBold"/>

                                                                    <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="10,0,0,0">
                                                                        <Button Content="▲" Width="24" Height="24"
                                                FontSize="10" Padding="0" Margin="0,0,2,0"
                                                Click="MoveRoleInTeam_Click" Tag="Up"
                                                ToolTip="上移"/>
                                                                        <Button Content="▼" Width="24" Height="24"
                                                FontSize="10" Padding="0"
                                                Click="MoveRoleInTeam_Click" Tag="Down"
                                                ToolTip="下移"/>
                                                                    </StackPanel>
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </Grid>
                                        </Border>

                                        <!-- 🎨 外來者 -->
                                        <Border x:Name="borderOutsider" BorderBrush="#71A8D6" BorderThickness="2" Margin="0,0,0,10" CornerRadius="4"
                Visibility="{Binding OutsidersCount, Converter={StaticResource CountToVisibilityConverter}}">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <Border Grid.Row="0" Background="#71A8D6" Padding="10" Cursor="Hand"
                        MouseLeftButtonDown="TeamHeader_Click" Tag="Outsider">
                                                    <Grid>
                                                        <TextBlock FontWeight="Bold" Foreground="White">
                            <Run Text="外來者 ("/>
                            <Run Text="{Binding OutsidersCount, Mode=OneWay}"/>
                            <Run Text=")"/>
                                                        </TextBlock>
                                                        <TextBlock x:Name="iconOutsider" Text="▼" Foreground="White" 
                                   HorizontalAlignment="Right" FontSize="14"/>
                                                    </Grid>
                                                </Border>

                                                <ItemsControl x:Name="listOutsider" Grid.Row="1" 
                              ItemsSource="{Binding OutsiderRoles}"
                              Background="White"
                              AllowDrop="True"
                              Drop="TeamList_Drop"
              DragOver="TeamList_DragOver"
              DragLeave="TeamList_DragLeave"
                              Tag="Outsider">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border BorderBrush="#EEE" BorderThickness="0,0,0,1" 
                                    Padding="10,8" Background="White"
                                    MouseLeftButtonDown="RoleItem_MouseDown"
                                    MouseMove="RoleItem_MouseMove"
                                    Cursor="Hand">
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                    </Grid.ColumnDefinitions>

                                                                    <TextBlock Grid.Column="0" Text="⋮⋮" 
                                               Foreground="#999" FontSize="14" 
                                               VerticalAlignment="Center" Margin="0,0,10,0"/>

                                                                    <Border Grid.Column="1" Width="40" Height="40" 
                                            Background="#F0F0F0" 
                                            BorderBrush="#71A8D6" BorderThickness="1"
                                            Margin="0,0,10,0">
                                                                        <Image Source="{Binding ImageUrl, Converter={StaticResource StringToImageSourceConverter}}" 
                                               Stretch="Uniform"/>
                                                                    </Border>

                                                                    <TextBlock Grid.Column="2" Text="{Binding Name}" 
                                               VerticalAlignment="Center" 
                                               FontWeight="SemiBold"/>

                                                                    <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="10,0,0,0">
                                                                        <Button Content="▲" Width="24" Height="24"
                                                FontSize="10" Padding="0" Margin="0,0,2,0"
                                                Click="MoveRoleInTeam_Click" Tag="Up"
                                                ToolTip="上移"/>
                                                                        <Button Content="▼" Width="24" Height="24"
                                                FontSize="10" Padding="0"
                                                Click="MoveRoleInTeam_Click" Tag="Down"
                                                ToolTip="下移"/>
                                                                    </StackPanel>
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </Grid>
                                        </Border>

                                        <!-- 🎨 爪牙 -->
                                        <Border x:Name="borderMinion" BorderBrush="#DC3545" BorderThickness="2" Margin="0,0,0,10" CornerRadius="4"
                Visibility="{Binding MinionsCount, Converter={StaticResource CountToVisibilityConverter}}">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <Border Grid.Row="0" Background="#DC3545" Padding="10" Cursor="Hand"
                        MouseLeftButtonDown="TeamHeader_Click" Tag="Minion">
                                                    <Grid>
                                                        <TextBlock FontWeight="Bold" Foreground="White">
                            <Run Text="爪牙 ("/>
                            <Run Text="{Binding MinionsCount, Mode=OneWay}"/>
                            <Run Text=")"/>
                                                        </TextBlock>
                                                        <TextBlock x:Name="iconMinion" Text="▼" Foreground="White" 
                                   HorizontalAlignment="Right" FontSize="14"/>
                                                    </Grid>
                                                </Border>

                                                <ItemsControl x:Name="listMinion" Grid.Row="1" 
                              ItemsSource="{Binding MinionRoles}"
                              Background="White"
                              AllowDrop="True"
                              Drop="TeamList_Drop"
              DragOver="TeamList_DragOver"
              DragLeave="TeamList_DragLeave"
                              Tag="Minion">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border BorderBrush="#EEE" BorderThickness="0,0,0,1" 
                                    Padding="10,8" Background="White"
                                    MouseLeftButtonDown="RoleItem_MouseDown"
                                    MouseMove="RoleItem_MouseMove"
                                    Cursor="Hand">
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                    </Grid.ColumnDefinitions>

                                                                    <TextBlock Grid.Column="0" Text="⋮⋮" 
                                               Foreground="#999" FontSize="14" 
                                               VerticalAlignment="Center" Margin="0,0,10,0"/>

                                                                    <Border Grid.Column="1" Width="40" Height="40" 
                                            Background="#F0F0F0" 
                                            BorderBrush="#DC3545" BorderThickness="1"
                                            Margin="0,0,10,0">
                                                                        <Image Source="{Binding ImageUrl, Converter={StaticResource StringToImageSourceConverter}}" 
                                               Stretch="Uniform"/>
                                                                    </Border>

                                                                    <TextBlock Grid.Column="2" Text="{Binding Name}" 
                                               VerticalAlignment="Center" 
                                               FontWeight="SemiBold"/>

                                                                    <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="10,0,0,0">
                                                                        <Button Content="▲" Width="24" Height="24"
                                                FontSize="10" Padding="0" Margin="0,0,2,0"
                                                Click="MoveRoleInTeam_Click" Tag="Up"
                                                ToolTip="上移"/>
                                                                        <Button Content="▼" Width="24" Height="24"
                                                FontSize="10" Padding="0"
                                                Click="MoveRoleInTeam_Click" Tag="Down"
                                                ToolTip="下移"/>
                                                                    </StackPanel>
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </Grid>
                                        </Border>

                                        <!-- 🎨 惡魔 -->
                                        <Border x:Name="borderDemon" BorderBrush="#8B0000" BorderThickness="2" Margin="0,0,0,10" CornerRadius="4"
                Visibility="{Binding DemonsCount, Converter={StaticResource CountToVisibilityConverter}}">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <Border Grid.Row="0" Background="#8B0000" Padding="10" Cursor="Hand"
                        MouseLeftButtonDown="TeamHeader_Click" Tag="Demon">
                                                    <Grid>
                                                        <TextBlock FontWeight="Bold" Foreground="White">
                            <Run Text="惡魔 ("/>
                            <Run Text="{Binding DemonsCount, Mode=OneWay}"/>
                            <Run Text=")"/>
                                                        </TextBlock>
                                                        <TextBlock x:Name="iconDemon" Text="▼" Foreground="White" 
                                   HorizontalAlignment="Right" FontSize="14"/>
                                                    </Grid>
                                                </Border>

                                                <ItemsControl x:Name="listDemon" Grid.Row="1" 
                              ItemsSource="{Binding DemonRoles}"
                              Background="White"
                              AllowDrop="True"
                              Drop="TeamList_Drop"
              DragOver="TeamList_DragOver"
              DragLeave="TeamList_DragLeave"
                              Tag="Demon">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border BorderBrush="#EEE" BorderThickness="0,0,0,1" 
                                    Padding="10,8" Background="White"
                                    MouseLeftButtonDown="RoleItem_MouseDown"
                                    MouseMove="RoleItem_MouseMove"
                                    Cursor="Hand">
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                    </Grid.ColumnDefinitions>

                                                                    <TextBlock Grid.Column="0" Text="⋮⋮" 
                                               Foreground="#999" FontSize="14" 
                                               VerticalAlignment="Center" Margin="0,0,10,0"/>

                                                                    <Border Grid.Column="1" Width="40" Height="40" 
                                            Background="#F0F0F0" 
                                            BorderBrush="#8B0000" BorderThickness="1"
                                            Margin="0,0,10,0">
                                                                        <Image Source="{Binding ImageUrl, Converter={StaticResource StringToImageSourceConverter}}" 
                                               Stretch="Uniform"/>
                                                                    </Border>

                                                                    <TextBlock Grid.Column="2" Text="{Binding Name}" 
                                               VerticalAlignment="Center" 
                                               FontWeight="SemiBold"/>

                                                                    <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="10,0,0,0">
                                                                        <Button Content="▲" Width="24" Height="24"
                                                FontSize="10" Padding="0" Margin="0,0,2,0"
                                                Click="MoveRoleInTeam_Click" Tag="Up"
                                                ToolTip="上移"/>
                                                                        <Button Content="▼" Width="24" Height="24"
                                                FontSize="10" Padding="0"
                                                Click="MoveRoleInTeam_Click" Tag="Down"
                                                ToolTip="下移"/>
                                                                    </StackPanel>
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </Grid>
                                        </Border>

                                        <!-- 🎨 旅行者 -->
                                        <Border x:Name="borderTraveler" BorderBrush="#6c757d" BorderThickness="2" Margin="0,0,0,10" CornerRadius="4"
                Visibility="{Binding TravelersCount, Converter={StaticResource CountToVisibilityConverter}}">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <Border Grid.Row="0" Background="#6c757d" Padding="10" Cursor="Hand"
                        MouseLeftButtonDown="TeamHeader_Click" Tag="Traveler">
                                                    <Grid>
                                                        <TextBlock FontWeight="Bold" Foreground="White">
                            <Run Text="旅行者 ("/>
                            <Run Text="{Binding TravelersCount, Mode=OneWay}"/>
                            <Run Text=")"/>
                                                        </TextBlock>
                                                        <TextBlock x:Name="iconTraveler" Text="▼" Foreground="White" 
                                   HorizontalAlignment="Right" FontSize="14"/>
                                                    </Grid>
                                                </Border>

                                                <ItemsControl x:Name="listTraveler" Grid.Row="1" 
                              ItemsSource="{Binding TravelerRoles}"
                              Background="White"
                              AllowDrop="True"
                              Drop="TeamList_Drop"
              DragOver="TeamList_DragOver"
              DragLeave="TeamList_DragLeave"
                              Tag="Traveler">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border BorderBrush="#EEE" BorderThickness="0,0,0,1" 
                                    Padding="10,8" Background="White"
                                    MouseLeftButtonDown="RoleItem_MouseDown"
                                    MouseMove="RoleItem_MouseMove"
                                    Cursor="Hand">
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                    </Grid.ColumnDefinitions>

                                                                    <TextBlock Grid.Column="0" Text="⋮⋮" 
                                               Foreground="#999" FontSize="14" 
                                               VerticalAlignment="Center" Margin="0,0,10,0"/>

                                                                    <Border Grid.Column="1" Width="40" Height="40" 
                                            Background="#F0F0F0" 
                                            BorderBrush="#6c757d" BorderThickness="1"
                                            Margin="0,0,10,0">
                                                                        <Image Source="{Binding ImageUrl, Converter={StaticResource StringToImageSourceConverter}}" 
                                               Stretch="Uniform"/>
                                                                    </Border>

                                                                    <TextBlock Grid.Column="2" Text="{Binding Name}" 
                                               VerticalAlignment="Center" 
                                               FontWeight="SemiBold"/>

                                                                    <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="10,0,0,0">
                                                                        <Button Content="▲" Width="24" Height="24"
                                                FontSize="10" Padding="0" Margin="0,0,2,0"
                                                Click="MoveRoleInTeam_Click" Tag="Up"
                                                ToolTip="上移"/>
                                                                        <Button Content="▼" Width="24" Height="24"
                                                FontSize="10" Padding="0"
                                                Click="MoveRoleInTeam_Click" Tag="Down"
                                                ToolTip="下移"/>
                                                                    </StackPanel>
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </Grid>
                                        </Border>

                                        <!-- 🎨 傳奇 -->
                                        <Border x:Name="borderFabled" BorderBrush="#FFC107" BorderThickness="2" Margin="0,0,0,10" CornerRadius="4"
                Visibility="{Binding FabledCount, Converter={StaticResource CountToVisibilityConverter}}">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <Border Grid.Row="0" Background="#FFC107" Padding="10" Cursor="Hand"
                        MouseLeftButtonDown="TeamHeader_Click" Tag="Fabled">
                                                    <Grid>
                                                        <TextBlock FontWeight="Bold" Foreground="White">
                            <Run Text="傳奇 ("/>
                            <Run Text="{Binding FabledCount, Mode=OneWay}"/>
                            <Run Text=")"/>
                                                        </TextBlock>
                                                        <TextBlock x:Name="iconFabled" Text="▼" Foreground="White" 
                                   HorizontalAlignment="Right" FontSize="14"/>
                                                    </Grid>
                                                </Border>

                                                <ItemsControl x:Name="listFabled" Grid.Row="1" 
                              ItemsSource="{Binding FabledRoles}"
                              Background="White"
                              AllowDrop="True"
                              Drop="TeamList_Drop"
              DragOver="TeamList_DragOver"
              DragLeave="TeamList_DragLeave"
                              Tag="Fabled">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border BorderBrush="#EEE" BorderThickness="0,0,0,1" 
                                    Padding="10,8" Background="White"
                                    MouseLeftButtonDown="RoleItem_MouseDown"
                                    MouseMove="RoleItem_MouseMove"
                                    Cursor="Hand">
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                    </Grid.ColumnDefinitions>

                                                                    <TextBlock Grid.Column="0" Text="⋮⋮" 
                                               Foreground="#999" FontSize="14" 
                                               VerticalAlignment="Center" Margin="0,0,10,0"/>

                                                                    <Border Grid.Column="1" Width="40" Height="40" 
                                            Background="#F0F0F0" 
                                            BorderBrush="#FFC107" BorderThickness="1"
                                            Margin="0,0,10,0">
                                                                        <Image Source="{Binding ImageUrl, Converter={StaticResource StringToImageSourceConverter}}" 
                                               Stretch="Uniform"/>
                                                                    </Border>

                                                                    <TextBlock Grid.Column="2" Text="{Binding Name}" 
                                               VerticalAlignment="Center" 
                                               FontWeight="SemiBold"/>

                                                                    <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="10,0,0,0">
                                                                        <Button Content="▲" Width="24" Height="24"
                                                FontSize="10" Padding="0" Margin="0,0,2,0"
                                                Click="MoveRoleInTeam_Click" Tag="Up"
                                                ToolTip="上移"/>
                                                                        <Button Content="▼" Width="24" Height="24"
                                                FontSize="10" Padding="0"
                                                Click="MoveRoleInTeam_Click" Tag="Down"
                                                ToolTip="下移"/>
                                                                    </StackPanel>
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </Grid>
                                        </Border>

                                        <!-- 🎨 相剋 -->
                                        <Border x:Name="borderJinxed" BorderBrush="#9C27B0" BorderThickness="2" Margin="0,0,0,10" CornerRadius="4"
                Visibility="{Binding JinxedCount, Converter={StaticResource CountToVisibilityConverter}}">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <Border Grid.Row="0" Background="#9C27B0" Padding="10" Cursor="Hand"
                        MouseLeftButtonDown="TeamHeader_Click" Tag="Jinxed">
                                                    <Grid>
                                                        <TextBlock FontWeight="Bold" Foreground="White">
                            <Run Text="相剋 ("/>
                            <Run Text="{Binding JinxedCount, Mode=OneWay}"/>
                            <Run Text=")"/>
                                                        </TextBlock>
                                                        <TextBlock x:Name="iconJinxed" Text="▼" Foreground="White" 
                                   HorizontalAlignment="Right" FontSize="14"/>
                                                    </Grid>
                                                </Border>

                                                <ItemsControl x:Name="listJinxed" Grid.Row="1" 
                              ItemsSource="{Binding JinxedRoles}"
                              Background="White"
                              AllowDrop="True"
                              Drop="TeamList_Drop"
              DragOver="TeamList_DragOver"
              DragLeave="TeamList_DragLeave"
                              Tag="Jinxed">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border BorderBrush="#EEE" BorderThickness="0,0,0,1" 
                                    Padding="10,8" Background="White"
                                    MouseLeftButtonDown="RoleItem_MouseDown"
                                    MouseMove="RoleItem_MouseMove"
                                    Cursor="Hand">
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                    </Grid.ColumnDefinitions>

                                                                    <TextBlock Grid.Column="0" Text="⋮⋮" 
                                               Foreground="#999" FontSize="14" 
                                               VerticalAlignment="Center" Margin="0,0,10,0"/>

                                                                    <Border Grid.Column="1" Width="40" Height="40" 
                                            Background="#F0F0F0" 
                                            BorderBrush="#9C27B0" BorderThickness="1"
                                            Margin="0,0,10,0">
                                                                        <Image Source="{Binding ImageUrl, Converter={StaticResource StringToImageSourceConverter}}" 
                                               Stretch="Uniform"/>
                                                                    </Border>

                                                                    <TextBlock Grid.Column="2" Text="{Binding Name}" 
                                               VerticalAlignment="Center" 
                                               FontWeight="SemiBold"/>

                                                                    <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="10,0,0,0">
                                                                        <Button Content="▲" Width="24" Height="24"
                                                FontSize="10" Padding="0" Margin="0,0,2,0"
                                                Click="MoveRoleInTeam_Click" Tag="Up"
                                                ToolTip="上移"/>
                                                                        <Button Content="▼" Width="24" Height="24"
                                                FontSize="10" Padding="0"
                                                Click="MoveRoleInTeam_Click" Tag="Down"
                                                ToolTip="下移"/>
                                                                    </StackPanel>
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </Grid>
                                        </Border>
                                    </StackPanel>
                                </ScrollViewer>
                            </Grid>
                        </TabItem>

                        <!-- Tab 2: 首夜順序 -->
                        <TabItem Header="首夜順序">
                            <Border BorderBrush="#DDD" BorderThickness="0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- 標題 -->
                                    <Border Grid.Row="0" Background="#F5F5F5" BorderBrush="#DDD" 
                    BorderThickness="0,0,0,1" Padding="8">
                                        <TextBlock Text="首個夜晚" FontSize="12" FontWeight="Bold" 
                           HorizontalAlignment="Center"/>
                                    </Border>

                                    <!-- 角色列表 -->
                                    <ListBox Grid.Row="1" 
                     ItemsSource="{Binding FirstNightRoles}"
         SelectionChanged="NightOrderList_SelectionChanged"
                     BorderThickness="0">
                                        <ListBox.ItemContainerStyle>
                                            <Style TargetType="ListBoxItem">
                                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                                <Setter Property="Padding" Value="0"/>
                                                <Setter Property="Margin" Value="0"/>
                                            </Style>
                                        </ListBox.ItemContainerStyle>

                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="#DDD" BorderThickness="0,0,0,1" Padding="10,8">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Grid.Column="0"
                                           Text="{Binding Name}" 
                                           FontWeight="Bold" 
                                           FontSize="12"
                                           Foreground="Black"
                                           VerticalAlignment="Center"/>

                                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                            <StackPanel.Style>
                                                                <Style TargetType="StackPanel">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </StackPanel.Style>

                                                            <Button Content="▲" 
                                            Width="24" Height="24"
                                            FontSize="10"
                                            Margin="2,0,0,0"
                                            Padding="0"
                                            Click="MoveNightOrder_Click" Tag="FirstUp"
                                            ToolTip="上移"/>

                                                            <Button Content="▼" 
                                            Width="24" Height="24"
                                            FontSize="10"
                                            Margin="2,0,0,0"
                                            Padding="0"
                                            Click="MoveNightOrder_Click" Tag="FirstDown"
                                            ToolTip="下移"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Grid>
                            </Border>
                        </TabItem>

                        <!-- Tab 3: 其他夜順序 -->
                        <TabItem Header="其他夜順序">
                            <Border BorderBrush="#DDD" BorderThickness="0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- 標題 -->
                                    <Border Grid.Row="0" Background="#F5F5F5" BorderBrush="#DDD" 
                    BorderThickness="0,0,0,1" Padding="8">
                                        <TextBlock Text="其他夜晚" FontSize="12" FontWeight="Bold" 
                           HorizontalAlignment="Center"/>
                                    </Border>

                                    <!-- 角色列表 -->
                                    <ListBox Grid.Row="1" 
                     ItemsSource="{Binding OtherNightRoles}"
         SelectionChanged="NightOrderList_SelectionChanged"
                     BorderThickness="0">
                                        <ListBox.ItemContainerStyle>
                                            <Style TargetType="ListBoxItem">
                                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                                <Setter Property="Padding" Value="0"/>
                                                <Setter Property="Margin" Value="0"/>
                                            </Style>
                                        </ListBox.ItemContainerStyle>

                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="#DDD" BorderThickness="0,0,0,1" Padding="10,8">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Grid.Column="0"
                                           Text="{Binding Name}" 
                                           FontWeight="Bold" 
                                           FontSize="12"
                                           Foreground="Black"
                                           VerticalAlignment="Center"/>

                                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                            <StackPanel.Style>
                                                                <Style TargetType="StackPanel">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </StackPanel.Style>

                                                            <Button Content="▲" 
                                            Width="24" Height="24"
                                            FontSize="10"
                                            Margin="2,0,0,0"
                                            Padding="0"
                                            Click="MoveNightOrder_Click" Tag="OtherUp"
                                            ToolTip="上移"/>

                                                            <Button Content="▼" 
                                            Width="24" Height="24"
                                            FontSize="10"
                                            Margin="2,0,0,0"
                                            Padding="0"
                                            Click="MoveNightOrder_Click" Tag="OtherDown"
                                            ToolTip="下移"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Grid>
                            </Border>
                        </TabItem>
                    </TabControl>
                </Grid>
            </Border>

            <!-- 分隔線 -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" 
                          Background="#DDD"/>

            <!-- 右側面板: 角色編輯區 -->
            <Grid Grid.Column="2">
                <!-- 角色編輯表單 (有選擇時顯示) -->
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ScrollViewer.Style>
                        <Style TargetType="ScrollViewer">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedRole}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ScrollViewer.Style>
                    <!-- 🆕 用 Grid 包裹兩個編輯器 -->
                    <Grid>
                        <StackPanel x:Name="NormalRoleEditor" 
                             Margin="20">
                            <!-- 標題 -->
                            <TextBlock Text="角色編輯" FontSize="20" FontWeight="Bold" Margin="0,0,0,8"/>
                            <Border BorderBrush="#DDD" BorderThickness="0,0,0,1" Margin="0,0,0,12"/>

                            <!-- 角色名稱 + 角色類型 左右並排 -->
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- 角色名稱 (唯讀) -->
                                <DockPanel Grid.Column="0">
                                    <TextBlock Text="角色名稱" 
                   FontWeight="SemiBold" 
                   DockPanel.Dock="Left" 
                   VerticalAlignment="Center" 
                   Margin="0,0,8,0" 
                   Width="80"/>
                                    <TextBlock Text="🔒 唯讀" 
                   FontSize="9" 
                   Foreground="#999" 
                   DockPanel.Dock="Right" 
                   VerticalAlignment="Center" 
                   Margin="4,0,0,0"/>
                                    <TextBox Text="{Binding SelectedRole.Name, Mode=OneWay}" 
                 IsReadOnly="True"
                 Background="#F5F5F5"
                 Padding="6,4" 
                 VerticalAlignment="Center"
                 BorderBrush="#CCC"
                 BorderThickness="1"/>
                                </DockPanel>

                                <!-- 角色類型 -->
                                <DockPanel Grid.Column="2"
           Visibility="{Binding SelectedRole.ShowDetailFields, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <TextBlock Text="角色類型 *" 
                   FontWeight="SemiBold" 
                   DockPanel.Dock="Left" 
                   VerticalAlignment="Center" 
                   Margin="0,0,8,0" 
                   Width="80"/>
                                    <ComboBox SelectedItem="{Binding SelectedRole.Team}" 
                  Padding="6,4" 
                  BorderBrush="#CCC" 
                  BorderThickness="1" 
                  VerticalAlignment="Center">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Converter={StaticResource TeamTypeConverter}}"/>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                        <models:TeamType>Townsfolk</models:TeamType>
                                        <models:TeamType>Outsider</models:TeamType>
                                        <models:TeamType>Minion</models:TeamType>
                                        <models:TeamType>Demon</models:TeamType>
                                        <models:TeamType>Traveler</models:TeamType>
                                        <models:TeamType>Fabled</models:TeamType>
                                        <!-- 🔴 移除 Jinxed -->
                                    </ComboBox>
                                </DockPanel>
                            </Grid>

                            <!-- ✅ 新增：使用官方 ID CheckBox -->
                            <CheckBox Content="使用官方 ID（輸出時簡化為官方 ID 字串）"
                              IsChecked="{Binding SelectedRole.UseOfficialId, UpdateSourceTrigger=PropertyChanged}"
                              Margin="0,12,0,8"
                              FontSize="12"
                              Visibility="{Binding SelectedRole.ShowOfficialIdCheckBox, Converter={StaticResource BoolToVisibilityConverter}}">
                                <CheckBox.ToolTip>
                                    <TextBlock TextWrapping="Wrap" MaxWidth="300">
                                勾選後，此角色在儲存劇本時只會輸出官方 ID（如 "washerwoman"），而不會輸出完整的角色資訊。<LineBreak/><LineBreak/>
                                勾選後將隱藏所有編輯欄位，只保留唯讀的角色名稱。
                                    </TextBlock>
                                </CheckBox.ToolTip>
                            </CheckBox>

                            <!-- ✅ 分隔線 -->
                            <Border BorderBrush="#DDD" 
                            BorderThickness="0,0,0,1" 
                            Margin="0,0,0,12"
                            Visibility="{Binding SelectedRole.ShowOfficialIdCheckBox, Converter={StaticResource BoolToVisibilityConverter}}"/>

                            <!-- ✅ 圖片 + 能力描述區塊（一般角色 + 私貨商人顯示）-->
                            <StackPanel Visibility="{Binding SelectedRole.ShowImageAndAbility, Converter={StaticResource BoolToVisibilityConverter}}">

                                <!-- 圖片 URL 列表 -->
                                <TextBlock Text="圖片 URL:" FontWeight="SemiBold" Margin="0,0,0,4"/>

                                <!-- 圖片列表 -->
                                <ItemsControl ItemsSource="{Binding SelectedRole.ImageItems}" Margin="0,0,0,8">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="#DDD" BorderThickness="1" Padding="8" Margin="0,0,0,6" Background="White">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="60"/>
                                                        <ColumnDefinition Width="8"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="8"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- 預覽圖 -->
                                                    <Border Grid.Column="0" 
                                                            Width="60" Height="60" 
                                                            BorderBrush="#CCC" BorderThickness="1" 
                                                            Background="#F9F9F9">
                                                        <Image Source="{Binding Url, Converter={StaticResource StringToImageSourceConverter}}" 
                                                               Stretch="Uniform"/>
                                                    </Border>

                                                    <!-- URL 輸入框 -->
                                                    <TextBox Grid.Column="2" 
                                                             Text="{Binding Url, UpdateSourceTrigger=PropertyChanged}"
                                                             VerticalAlignment="Center" 
                                                             Padding="6,4"
                                                             BorderBrush="#CCC" 
                                                             BorderThickness="1"
                                                             TextChanged="ImageUrl_TextChanged"/>

                                                    <!-- 刪除按鈕 -->
                                                    <Button Grid.Column="4" 
                                                            Content="🗑️" 
                                                            Width="32" Height="32"
                                                            Click="DeleteImage_Click"
                                                            ToolTip="刪除"
                                                            Background="#F44336" 
                                                            Foreground="White" 
                                                            BorderThickness="0"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- 新增按鈕 + 說明 -->
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Button Grid.Column="0" 
                                            Content="➕ 新增圖片" 
                                            Padding="12,6" 
                                            Click="AddImage_Click"
                                            Background="#4CAF50" 
                                            Foreground="White" 
                                            BorderThickness="0">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="IsEnabled" Value="True"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedRole.ImageItems.Count, Converter={StaticResource IntGreaterThanConverter}, ConverterParameter=2}" Value="True">
                                                        <Setter Property="IsEnabled" Value="False"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>

                                    <TextBlock Grid.Column="1" 
                                               Text="說明: 集石格式僅使用第一張圖片 | 最多 3 張" 
                                               FontSize="11" 
                                               Foreground="#666" 
                                               VerticalAlignment="Center" 
                                               Margin="12,0,0,0"/>
                                </Grid>

                                <Border BorderBrush="#DDD" BorderThickness="0,0,0,1" Margin="0,4,0,10"/>

                                <!-- 能力描述 -->
                                <TextBlock Text="能力描述 *" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding SelectedRole.Ability, UpdateSourceTrigger=PropertyChanged}" 
                                         TextWrapping="Wrap" AcceptsReturn="True" Height="80"
                                         Padding="6,4" VerticalScrollBarVisibility="Auto">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="BorderBrush" Value="#CCC"/>
                                            <Setter Property="BorderThickness" Value="1"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedRole.Ability, Converter={StaticResource StringNotEmptyConverter}}" Value="False">
                                                    <Setter Property="BorderBrush" Value="#F44336"/>
                                                    <Setter Property="BorderThickness" Value="2"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>

                                <Border BorderBrush="#DDD" BorderThickness="0,0,0,1" Margin="0,10"/>

                            </StackPanel>
                            <!-- ✅ 結束：圖片 + 能力描述區塊 -->

                            <!-- ✅ 私貨商人提示訊息（只有私貨商人顯示）-->
                            <Border Background="#FFF3CD" 
                                    BorderBrush="#FFC107" 
                                    BorderThickness="1" 
                                    Padding="10" 
                                    Margin="0,0,0,12" 
                                    CornerRadius="3"
                                    Visibility="{Binding SelectedRole.IsBootleggerRole, Converter={StaticResource BoolToVisibilityConverter}}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="💡" 
                                               FontSize="14" 
                                               VerticalAlignment="Center" 
                                               Margin="0,0,6,0"/>
                                    <TextBlock TextWrapping="Wrap" FontSize="11">
                                        <Run Text="這是"/>
                                        <Run Text="私貨商人規則" FontWeight="Bold"/>
                                        <Run Text="，建議在「劇本 > 編輯劇本資訊」中統一管理所有規則。"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <!-- ✅ 詳細欄位區塊（只有一般角色顯示，移除圖片和能力）-->
                            <StackPanel Visibility="{Binding SelectedRole.ShowDetailFields, Converter={StaticResource BoolToVisibilityConverter}}">

                                <!-- 第四行: 所屬版本 + 影響設置 -->
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="12"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <DockPanel Grid.Column="0">
                                        <TextBlock Text="所屬版本" FontWeight="SemiBold" DockPanel.Dock="Left" 
                               VerticalAlignment="Center" Margin="0,0,8,0" Width="80"/>
                                        <TextBox Text="{Binding SelectedRole.Edition, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="6,4" BorderBrush="#CCC" BorderThickness="1" VerticalAlignment="Center"/>
                                    </DockPanel>

                                    <CheckBox Grid.Column="2" 
                          Content="影響設置 (Setup)" 
                          IsChecked="{Binding SelectedRole.Setup}" 
                          FontSize="12" 
                          VerticalAlignment="Center"/>
                                </Grid>

                                <Border BorderBrush="#DDD" BorderThickness="0,0,0,1" Margin="0,4,0,10"/>

                                <!-- 夜晚行動與說書人提示 -->
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="12"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- 左側：首個夜晚 -->
                                    <Grid Grid.Column="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="8"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <!-- 首夜順序 -->
                                        <DockPanel Grid.Row="0">
                                            <TextBlock Text="首夜順序" FontWeight="SemiBold" DockPanel.Dock="Left" 
                                   VerticalAlignment="Center" Margin="0,0,8,0" Width="70"/>
                                            <TextBox Text="{Binding SelectedRole.FirstNight, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="6,4" BorderBrush="#CCC" BorderThickness="1" VerticalAlignment="Center"/>
                                        </DockPanel>

                                        <!-- 首夜提示 -->
                                        <DockPanel Grid.Row="2">
                                            <TextBlock Text="首夜提示" FontWeight="SemiBold" FontSize="11" DockPanel.Dock="Left" 
                                   VerticalAlignment="Top" Margin="0,4,8,0" Width="70"/>
                                            <TextBox Text="{Binding SelectedRole.FirstNightReminder, UpdateSourceTrigger=PropertyChanged}" 
                                 TextWrapping="Wrap" AcceptsReturn="True" Height="90"
