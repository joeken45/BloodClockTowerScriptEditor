<Window x:Class="BloodClockTowerScriptEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BloodClockTowerScriptEditor"
        xmlns:models="clr-namespace:BloodClockTowerScriptEditor.Models"
        xmlns:converters="clr-namespace:BloodClockTowerScriptEditor.Converters"
        mc:Ignorable="d"
        Title="Blood on the Clocktower 劇本編輯器" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- 轉換器 -->
        <converters:TeamTypeConverter x:Key="TeamTypeConverter"/>
        <converters:NullToBooleanConverter x:Key="NullToBooleanConverter"/>
        <converters:IdFormatValidationConverter x:Key="IdFormatValidationConverter"/>
        <converters:StringNotEmptyConverter x:Key="StringNotEmptyConverter"/>
        <converters:StringToImageSourceConverter x:Key="StringToImageSourceConverter"/>
        <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
        <converters:IntGreaterThanConverter x:Key="IntGreaterThanConverter"/>

        <!-- 陣營顏色 -->
        <SolidColorBrush x:Key="TownsfolkBrush" Color="#368CE1"/>
        <SolidColorBrush x:Key="OutsiderBrush" Color="#71A8D6"/>
        <SolidColorBrush x:Key="MinionBrush" Color="#DC3545"/>
        <SolidColorBrush x:Key="DemonBrush" Color="#8B0000"/>
        <SolidColorBrush x:Key="TravelerBrush" Color="#808080"/>
        <SolidColorBrush x:Key="FabledBrush" Color="#FFC107"/>

        <!-- 標籤樣式 -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- 文字框樣式 -->
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- 多行文字框樣式 -->
        <Style x:Key="MultiLineTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource TextBoxStyle}">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="MinHeight" Value="80"/>
        </Style>

        <!-- 驗證錯誤樣式 -->
        <Style x:Key="ValidatedTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource TextBoxStyle}">
            <Style.Triggers>
                <!-- 當驗證失敗時顯示紅色邊框 -->
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="BorderBrush" Value="#F44336"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 選單列 -->
        <Menu Grid.Row="0">
            <MenuItem Header="檔案(_F)">
                <!-- 🆕 新增: 新增檔案 -->
                <MenuItem Header="新增檔案(_N)" 
                  Command="{Binding NewFileCommand}"
                  InputGestureText="Ctrl+N">
                    <MenuItem.Icon>
                        <TextBlock Text="📄" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>

                <Separator/>

                <!-- 原有的開啟舊檔 -->
                <MenuItem Header="開啟舊檔(_O)" 
                  Command="{Binding LoadJsonCommand}"
                  InputGestureText="Ctrl+O">
                    <MenuItem.Icon>
                        <TextBlock Text="📂" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>

                <Separator/>

                <!-- 原有的儲存檔案 -->
                <MenuItem Header="儲存檔案(_S)" 
                  Command="{Binding SaveJsonCommand}"
                  InputGestureText="Ctrl+S">
                    <MenuItem.Icon>
                        <TextBlock Text="💾" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>

                <!-- 原有的另存新檔 -->
                <MenuItem Header="另存新檔(_A)" 
                  Command="{Binding SaveAsJsonCommand}"
                  InputGestureText="Ctrl+Shift+S">
                    <MenuItem.Icon>
                        <TextBlock Text="📝" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>

                <Separator/>

                <!-- 原有的結束 -->
                <MenuItem Header="結束(_X)" Click="Exit_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="❌" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="說明(_H)">
                <MenuItem Header="關於(_A)" Click="About_Click"/>
            </MenuItem>
        </Menu>

        <!-- 主要內容區 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左側面板: 篩選 + 按鈕 + 角色列表/夜晚順序 -->
            <Border Grid.Column="0" BorderBrush="#DDD" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- 劇本資訊 -->
                        <RowDefinition Height="*"/>
                        <!-- TabControl (包含篩選+按鈕+列表) -->
                    </Grid.RowDefinitions>

                    <!-- 劇本資訊 -->
                    <Border Grid.Row="0" Margin="10" Background="#F5F5F5" Padding="10" BorderBrush="#CCC" BorderThickness="1">
                        <DockPanel>
                            <!-- 標題和按鈕 -->
                            <DockPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                                <TextBlock Text="劇本資訊" FontWeight="Bold" FontSize="14" 
                               DockPanel.Dock="Left" VerticalAlignment="Center"/>
                                <Button Content="✏️ 編輯" Padding="6,3" FontSize="11"
                            HorizontalAlignment="Right"
                            Command="{Binding EditScriptMetaCommand}"
                            Background="#FF4A90E2" Foreground="White" BorderThickness="0"/>
                            </DockPanel>

                            <!-- Logo 預覽和名稱 -->
                            <StackPanel HorizontalAlignment="Center">
                                <Border BorderBrush="#CCC" BorderThickness="1" Background="White" 
                            Height="80" Width="160" Margin="0,0,0,8">
                                    <Image Source="{Binding CurrentScript.Meta.Logo, Converter={StaticResource StringToImageSourceConverter}}"  
                               Stretch="Uniform" Margin="4"/>
                                </Border>
                                <TextBlock Text="{Binding CurrentScript.Meta.Name}" 
                               FontWeight="Bold" FontSize="13"
                               TextAlignment="Center" TextWrapping="Wrap"/>
                            </StackPanel>
                        </DockPanel>
                    </Border>

                    <!-- TabControl -->
                    <TabControl Grid.Row="1" Margin="10,0,10,10" >
                        <!-- Tab 1: 角色列表 (含篩選和按鈕) -->
                        <TabItem Header="角色列表">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <!-- 按鈕區 -->
                                    <RowDefinition Height="*"/>
                                    <!-- 分類區塊 -->
                                </Grid.RowDefinitions>

                                <!-- ✅ 按鈕區 -->
                                <Border Grid.Row="0" Background="#F5F5F5" Padding="8,10" Margin="0,0,0,10">
                                    <StackPanel>
                                        <!-- 第一行：展開/收合全部按鈕 -->
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                            <Button Content="📂 全部展開" Width="100" Height="30" Margin="0,0,5,0"
                    Click="ExpandAll_Click"
                    Background="#6c757d" Foreground="White" BorderThickness="0"
                    FontSize="11" ToolTip="展開所有類別"/>
                                            <Button Content="📁 全部收合" Width="100" Height="30"
                    Click="CollapseAll_Click"
                    Background="#6c757d" Foreground="White" BorderThickness="0"
                    FontSize="11" ToolTip="收合所有類別"/>
                                        </StackPanel>

                                        <!-- 第二行：新增/刪除按鈕 -->
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="➕ 新增角色" Width="100" Height="30" Margin="0,0,5,0"
                    Command="{Binding AddFromOfficialTemplateCommand}"
                    Background="#4CAF50" Foreground="White" BorderThickness="0"
                    FontSize="12" FontWeight="SemiBold"
                    ToolTip="從範本新增角色"/>
                                            <Button Content="🗑️ 刪除角色" Width="100" Height="30"
                    Command="{Binding RemoveRoleCommand}"
                    Background="#F44336" Foreground="White" BorderThickness="0"
                    FontSize="12" FontWeight="SemiBold"
                    ToolTip="刪除選中的角色"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <!-- ✅ 分類展開區塊 -->
                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                    <StackPanel>
                                        <!-- 🎨 鎮民 -->
                                        <Border x:Name="borderTownsfolk" BorderBrush="#368CE1" BorderThickness="2" Margin="0,0,0,10" CornerRadius="4"
                Visibility="{Binding TownsfolkCount, Converter={StaticResource CountToVisibilityConverter}}">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <Border Grid.Row="0" Background="#368CE1" Padding="10" Cursor="Hand"
                        MouseLeftButtonDown="TeamHeader_Click" Tag="Townsfolk">
                                                    <Grid>
                                                        <TextBlock FontWeight="Bold" Foreground="White">
                            <Run Text="鎮民 ("/>
                            <Run Text="{Binding TownsfolkCount, Mode=OneWay}"/>
                            <Run Text=")"/>
                                                        </TextBlock>
                                                        <TextBlock x:Name="iconTownsfolk" Text="▼" Foreground="White" 
                                   HorizontalAlignment="Right" FontSize="14"/>
                                                    </Grid>
                                                </Border>

                                                <ItemsControl x:Name="listTownsfolk" Grid.Row="1" 
                              ItemsSource="{Binding TownsfolkRoles}"
                              Background="White"
                              AllowDrop="True"
                              Drop="TeamList_Drop"
              DragOver="TeamList_DragOver"
              DragLeave="TeamList_DragLeave"
                              Tag="Townsfolk">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border BorderBrush="#EEE" BorderThickness="0,0,0,1" 
                                    Padding="10,8" Background="White"
                                    MouseLeftButtonDown="RoleItem_MouseDown"
                                    MouseMove="RoleItem_MouseMove"
                                    Cursor="Hand">
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                    </Grid.ColumnDefinitions>

                                                                    <TextBlock Grid.Column="0" Text="⋮⋮" 
                                               Foreground="#999" FontSize="14" 
                                               VerticalAlignment="Center" Margin="0,0,10,0"/>

                                                                    <Border Grid.Column="1" Width="40" Height="40" 
                                            Background="#F0F0F0" 
                                            BorderBrush="#368CE1" BorderThickness="1"
                                            Margin="0,0,10,0">
                                                                        <Image Source="{Binding ImageUrl, Converter={StaticResource StringToImageSourceConverter}}" 
                                               Stretch="Uniform"/>
                                                                    </Border>

                                                                    <TextBlock Grid.Column="2" Text="{Binding Name}" 
                                               VerticalAlignment="Center" 
                                               FontWeight="SemiBold"/>

                                                                    <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="10,0,0,0">
                                                                        <Button Content="▲" Width="24" Height="24"
                                                FontSize="10" Padding="0" Margin="0,0,2,0"
                                                Click="MoveRoleInTeam_Click" Tag="Up"
                                                ToolTip="上移"/>
                                                                        <Button Content="▼" Width="24" Height="24"
                                                FontSize="10" Padding="0"
                                                Click="MoveRoleInTeam_Click" Tag="Down"
                                                ToolTip="下移"/>
                                                                    </StackPanel>
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </Grid>
                                        </Border>

                                        <!-- 🎨 外來者 -->
                                        <Border x:Name="borderOutsider" BorderBrush="#71A8D6" BorderThickness="2" Margin="0,0,0,10" CornerRadius="4"
                Visibility="{Binding OutsidersCount, Converter={StaticResource CountToVisibilityConverter}}">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <Border Grid.Row="0" Background="#71A8D6" Padding="10" Cursor="Hand"
                        MouseLeftButtonDown="TeamHeader_Click" Tag="Outsider">
                                                    <Grid>
                                                        <TextBlock FontWeight="Bold" Foreground="White">
                            <Run Text="外來者 ("/>
                            <Run Text="{Binding OutsidersCount, Mode=OneWay}"/>
                            <Run Text=")"/>
                                                        </TextBlock>
                                                        <TextBlock x:Name="iconOutsider" Text="▼" Foreground="White" 
                                   HorizontalAlignment="Right" FontSize="14"/>
                                                    </Grid>
                                                </Border>

                                                <ItemsControl x:Name="listOutsider" Grid.Row="1" 
                              ItemsSource="{Binding OutsiderRoles}"
                              Background="White"
                              AllowDrop="True"
                              Drop="TeamList_Drop"
              DragOver="TeamList_DragOver"
              DragLeave="TeamList_DragLeave"
                              Tag="Outsider">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border BorderBrush="#EEE" BorderThickness="0,0,0,1" 
                                    Padding="10,8" Background="White"
                                    MouseLeftButtonDown="RoleItem_MouseDown"
                                    MouseMove="RoleItem_MouseMove"
                                    Cursor="Hand">
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                    </Grid.ColumnDefinitions>

                                                                    <TextBlock Grid.Column="0" Text="⋮⋮" 
                                               Foreground="#999" FontSize="14" 
                                               VerticalAlignment="Center" Margin="0,0,10,0"/>

                                                                    <Border Grid.Column="1" Width="40" Height="40" 
                                            Background="#F0F0F0" 
                                            BorderBrush="#71A8D6" BorderThickness="1"
                                            Margin="0,0,10,0">
                                                                        <Image Source="{Binding ImageUrl, Converter={StaticResource StringToImageSourceConverter}}" 
                                               Stretch="Uniform"/>
                                                                    </Border>

                                                                    <TextBlock Grid.Column="2" Text="{Binding Name}" 
                                               VerticalAlignment="Center" 
                                               FontWeight="SemiBold"/>

                                                                    <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="10,0,0,0">
                                                                        <Button Content="▲" Width="24" Height="24"
                                                FontSize="10" Padding="0" Margin="0,0,2,0"
                                                Click="MoveRoleInTeam_Click" Tag="Up"
                                                ToolTip="上移"/>
                                                                        <Button Content="▼" Width="24" Height="24"
                                                FontSize="10" Padding="0"
                                                Click="MoveRoleInTeam_Click" Tag="Down"
                                                ToolTip="下移"/>
                                                                    </StackPanel>
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </Grid>
                                        </Border>

                                        <!-- 🎨 爪牙 -->
                                        <Border x:Name="borderMinion" BorderBrush="#DC3545" BorderThickness="2" Margin="0,0,0,10" CornerRadius="4"
                Visibility="{Binding MinionsCount, Converter={StaticResource CountToVisibilityConverter}}">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <Border Grid.Row="0" Background="#DC3545" Padding="10" Cursor="Hand"
                        MouseLeftButtonDown="TeamHeader_Click" Tag="Minion">
                                                    <Grid>
                                                        <TextBlock FontWeight="Bold" Foreground="White">
                            <Run Text="爪牙 ("/>
                            <Run Text="{Binding MinionsCount, Mode=OneWay}"/>
                            <Run Text=")"/>
                                                        </TextBlock>
                                                        <TextBlock x:Name="iconMinion" Text="▼" Foreground="White" 
                                   HorizontalAlignment="Right" FontSize="14"/>
                                                    </Grid>
                                                </Border>

                                                <ItemsControl x:Name="listMinion" Grid.Row="1" 
                              ItemsSource="{Binding MinionRoles}"
                              Background="White"
                              AllowDrop="True"
                              Drop="TeamList_Drop"
              DragOver="TeamList_DragOver"
              DragLeave="TeamList_DragLeave"
                              Tag="Minion">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border BorderBrush="#EEE" BorderThickness="0,0,0,1" 
                                    Padding="10,8" Background="White"
                                    MouseLeftButtonDown="RoleItem_MouseDown"
                                    MouseMove="RoleItem_MouseMove"
                                    Cursor="Hand">
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                    </Grid.ColumnDefinitions>

                                                                    <TextBlock Grid.Column="0" Text="⋮⋮" 
                                               Foreground="#999" FontSize="14" 
                                               VerticalAlignment="Center" Margin="0,0,10,0"/>

                                                                    <Border Grid.Column="1" Width="40" Height="40" 
                                            Background="#F0F0F0" 
                                            BorderBrush="#DC3545" BorderThickness="1"
                                            Margin="0,0,10,0">
                                                                        <Image Source="{Binding ImageUrl, Converter={StaticResource StringToImageSourceConverter}}" 
                                               Stretch="Uniform"/>
                                                                    </Border>

                                                                    <TextBlock Grid.Column="2" Text="{Binding Name}" 
                                               VerticalAlignment="Center" 
                                               FontWeight="SemiBold"/>

                                                                    <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="10,0,0,0">
                                                                        <Button Content="▲" Width="24" Height="24"
                                                FontSize="10" Padding="0" Margin="0,0,2,0"
                                                Click="MoveRoleInTeam_Click" Tag="Up"
                                                ToolTip="上移"/>
                                                                        <Button Content="▼" Width="24" Height="24"
                                                FontSize="10" Padding="0"
                                                Click="MoveRoleInTeam_Click" Tag="Down"
                                                ToolTip="下移"/>
                                                                    </StackPanel>
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </Grid>
                                        </Border>

                                        <!-- 🎨 惡魔 -->
                                        <Border x:Name="borderDemon" BorderBrush="#8B0000" BorderThickness="2" Margin="0,0,0,10" CornerRadius="4"
                Visibility="{Binding DemonsCount, Converter={StaticResource CountToVisibilityConverter}}">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <Border Grid.Row="0" Background="#8B0000" Padding="10" Cursor="Hand"
                        MouseLeftButtonDown="TeamHeader_Click" Tag="Demon">
                                                    <Grid>
                                                        <TextBlock FontWeight="Bold" Foreground="White">
                            <Run Text="惡魔 ("/>
                            <Run Text="{Binding DemonsCount, Mode=OneWay}"/>
                            <Run Text=")"/>
                                                        </TextBlock>
                                                        <TextBlock x:Name="iconDemon" Text="▼" Foreground="White" 
                                   HorizontalAlignment="Right" FontSize="14"/>
                                                    </Grid>
                                                </Border>

                                                <ItemsControl x:Name="listDemon" Grid.Row="1" 
                              ItemsSource="{Binding DemonRoles}"
                              Background="White"
                              AllowDrop="True"
                              Drop="TeamList_Drop"
              DragOver="TeamList_DragOver"
              DragLeave="TeamList_DragLeave"
                              Tag="Demon">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border BorderBrush="#EEE" BorderThickness="0,0,0,1" 
                                    Padding="10,8" Background="White"
                                    MouseLeftButtonDown="RoleItem_MouseDown"
                                    MouseMove="RoleItem_MouseMove"
                                    Cursor="Hand">
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                    </Grid.ColumnDefinitions>

                                                                    <TextBlock Grid.Column="0" Text="⋮⋮" 
                                               Foreground="#999" FontSize="14" 
                                               VerticalAlignment="Center" Margin="0,0,10,0"/>

                                                                    <Border Grid.Column="1" Width="40" Height="40" 
                                            Background="#F0F0F0" 
                                            BorderBrush="#8B0000" BorderThickness="1"
                                            Margin="0,0,10,0">
                                                                        <Image Source="{Binding ImageUrl, Converter={StaticResource StringToImageSourceConverter}}" 
                                               Stretch="Uniform"/>
                                                                    </Border>

                                                                    <TextBlock Grid.Column="2" Text="{Binding Name}" 
                                               VerticalAlignment="Center" 
                                               FontWeight="SemiBold"/>

                                                                    <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="10,0,0,0">
                                                                        <Button Content="▲" Width="24" Height="24"
                                                FontSize="10" Padding="0" Margin="0,0,2,0"
                                                Click="MoveRoleInTeam_Click" Tag="Up"
                                                ToolTip="上移"/>
                                                                        <Button Content="▼" Width="24" Height="24"
                                                FontSize="10" Padding="0"
                                                Click="MoveRoleInTeam_Click" Tag="Down"
                                                ToolTip="下移"/>
                                                                    </StackPanel>
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </Grid>
                                        </Border>

                                        <!-- 🎨 旅行者 -->
                                        <Border x:Name="borderTraveler" BorderBrush="#6c757d" BorderThickness="2" Margin="0,0,0,10" CornerRadius="4"
                Visibility="{Binding TravelersCount, Converter={StaticResource CountToVisibilityConverter}}">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <Border Grid.Row="0" Background="#6c757d" Padding="10" Cursor="Hand"
                        MouseLeftButtonDown="TeamHeader_Click" Tag="Traveler">
                                                    <Grid>
                                                        <TextBlock FontWeight="Bold" Foreground="White">
                            <Run Text="旅行者 ("/>
                            <Run Text="{Binding TravelersCount, Mode=OneWay}"/>
                            <Run Text=")"/>
                                                        </TextBlock>
                                                        <TextBlock x:Name="iconTraveler" Text="▼" Foreground="White" 
                                   HorizontalAlignment="Right" FontSize="14"/>
                                                    </Grid>
                                                </Border>

                                                <ItemsControl x:Name="listTraveler" Grid.Row="1" 
                              ItemsSource="{Binding TravelerRoles}"
                              Background="White"
                              AllowDrop="True"
                              Drop="TeamList_Drop"
              DragOver="TeamList_DragOver"
              DragLeave="TeamList_DragLeave"
                              Tag="Traveler">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border BorderBrush="#EEE" BorderThickness="0,0,0,1" 
                                    Padding="10,8" Background="White"
                                    MouseLeftButtonDown="RoleItem_MouseDown"
                                    MouseMove="RoleItem_MouseMove"
                                    Cursor="Hand">
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                    </Grid.ColumnDefinitions>

                                                                    <TextBlock Grid.Column="0" Text="⋮⋮" 
                                               Foreground="#999" FontSize="14" 
                                               VerticalAlignment="Center" Margin="0,0,10,0"/>

                                                                    <Border Grid.Column="1" Width="40" Height="40" 
                                            Background="#F0F0F0" 
                                            BorderBrush="#6c757d" BorderThickness="1"
                                            Margin="0,0,10,0">
                                                                        <Image Source="{Binding ImageUrl, Converter={StaticResource StringToImageSourceConverter}}" 
                                               Stretch="Uniform"/>
                                                                    </Border>

                                                                    <TextBlock Grid.Column="2" Text="{Binding Name}" 
                                               VerticalAlignment="Center" 
                                               FontWeight="SemiBold"/>

                                                                    <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="10,0,0,0">
                                                                        <Button Content="▲" Width="24" Height="24"
                                                FontSize="10" Padding="0" Margin="0,0,2,0"
                                                Click="MoveRoleInTeam_Click" Tag="Up"
                                                ToolTip="上移"/>
                                                                        <Button Content="▼" Width="24" Height="24"
                                                FontSize="10" Padding="0"
                                                Click="MoveRoleInTeam_Click" Tag="Down"
                                                ToolTip="下移"/>
                                                                    </StackPanel>
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </Grid>
                                        </Border>

                                        <!-- 🎨 傳奇 -->
                                        <Border x:Name="borderFabled" BorderBrush="#FFC107" BorderThickness="2" Margin="0,0,0,10" CornerRadius="4"
                Visibility="{Binding FabledCount, Converter={StaticResource CountToVisibilityConverter}}">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <Border Grid.Row="0" Background="#FFC107" Padding="10" Cursor="Hand"
                        MouseLeftButtonDown="TeamHeader_Click" Tag="Fabled">
                                                    <Grid>
                                                        <TextBlock FontWeight="Bold" Foreground="White">
                            <Run Text="傳奇 ("/>
                            <Run Text="{Binding FabledCount, Mode=OneWay}"/>
                            <Run Text=")"/>
                                                        </TextBlock>
                                                        <TextBlock x:Name="iconFabled" Text="▼" Foreground="White" 
                                   HorizontalAlignment="Right" FontSize="14"/>
                                                    </Grid>
                                                </Border>

                                                <ItemsControl x:Name="listFabled" Grid.Row="1" 
                              ItemsSource="{Binding FabledRoles}"
                              Background="White"
                              AllowDrop="True"
                              Drop="TeamList_Drop"
              DragOver="TeamList_DragOver"
              DragLeave="TeamList_DragLeave"
                              Tag="Fabled">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border BorderBrush="#EEE" BorderThickness="0,0,0,1" 
                                    Padding="10,8" Background="White"
                                    MouseLeftButtonDown="RoleItem_MouseDown"
                                    MouseMove="RoleItem_MouseMove"
                                    Cursor="Hand">
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                    </Grid.ColumnDefinitions>

                                                                    <TextBlock Grid.Column="0" Text="⋮⋮" 
                                               Foreground="#999" FontSize="14" 
                                               VerticalAlignment="Center" Margin="0,0,10,0"/>

                                                                    <Border Grid.Column="1" Width="40" Height="40" 
                                            Background="#F0F0F0" 
                                            BorderBrush="#FFC107" BorderThickness="1"
                                            Margin="0,0,10,0">
                                                                        <Image Source="{Binding ImageUrl, Converter={StaticResource StringToImageSourceConverter}}" 
                                               Stretch="Uniform"/>
                                                                    </Border>

                                                                    <TextBlock Grid.Column="2" Text="{Binding Name}" 
                                               VerticalAlignment="Center" 
                                               FontWeight="SemiBold"/>

                                                                    <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="10,0,0,0">
                                                                        <Button Content="▲" Width="24" Height="24"
                                                FontSize="10" Padding="0" Margin="0,0,2,0"
                                                Click="MoveRoleInTeam_Click" Tag="Up"
                                                ToolTip="上移"/>
                                                                        <Button Content="▼" Width="24" Height="24"
                                                FontSize="10" Padding="0"
                                                Click="MoveRoleInTeam_Click" Tag="Down"
                                                ToolTip="下移"/>
                                                                    </StackPanel>
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </Grid>
                                        </Border>

                                        <!-- 🎨 相剋 -->
                                        <Border x:Name="borderJinxed" BorderBrush="#9C27B0" BorderThickness="2" Margin="0,0,0,10" CornerRadius="4"
                Visibility="{Binding JinxedCount, Converter={StaticResource CountToVisibilityConverter}}">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <Border Grid.Row="0" Background="#9C27B0" Padding="10" Cursor="Hand"
                        MouseLeftButtonDown="TeamHeader_Click" Tag="Jinxed">
                                                    <Grid>
                                                        <TextBlock FontWeight="Bold" Foreground="White">
                            <Run Text="相剋 ("/>
                            <Run Text="{Binding JinxedCount, Mode=OneWay}"/>
                            <Run Text=")"/>
                                                        </TextBlock>
                                                        <TextBlock x:Name="iconJinxed" Text="▼" Foreground="White" 
                                   HorizontalAlignment="Right" FontSize="14"/>
                                                    </Grid>
                                                </Border>

                                                <ItemsControl x:Name="listJinxed" Grid.Row="1" 
                              ItemsSource="{Binding JinxedRoles}"
                              Background="White"
                              AllowDrop="True"
                              Drop="TeamList_Drop"
              DragOver="TeamList_DragOver"
              DragLeave="TeamList_DragLeave"
                              Tag="Jinxed">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border BorderBrush="#EEE" BorderThickness="0,0,0,1" 
                                    Padding="10,8" Background="White"
                                    MouseLeftButtonDown="RoleItem_MouseDown"
                                    MouseMove="RoleItem_MouseMove"
                                    Cursor="Hand">
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                    </Grid.ColumnDefinitions>

                                                                    <TextBlock Grid.Column="0" Text="⋮⋮" 
                                               Foreground="#999" FontSize="14" 
                                               VerticalAlignment="Center" Margin="0,0,10,0"/>

                                                                    <Border Grid.Column="1" Width="40" Height="40" 
                                            Background="#F0F0F0" 
                                            BorderBrush="#9C27B0" BorderThickness="1"
                                            Margin="0,0,10,0">
                                                                        <Image Source="{Binding ImageUrl, Converter={StaticResource StringToImageSourceConverter}}" 
                                               Stretch="Uniform"/>
                                                                    </Border>

                                                                    <TextBlock Grid.Column="2" Text="{Binding Name}" 
                                               VerticalAlignment="Center" 
                                               FontWeight="SemiBold"/>

                                                                    <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="10,0,0,0">
                                                                        <Button Content="▲" Width="24" Height="24"
                                                FontSize="10" Padding="0" Margin="0,0,2,0"
                                                Click="MoveRoleInTeam_Click" Tag="Up"
                                                ToolTip="上移"/>
                                                                        <Button Content="▼" Width="24" Height="24"
                                                FontSize="10" Padding="0"
                                                Click="MoveRoleInTeam_Click" Tag="Down"
                                                ToolTip="下移"/>
                                                                    </StackPanel>
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </Grid>
                                        </Border>
                                    </StackPanel>
                                </ScrollViewer>
                            </Grid>
                        </TabItem>

                        <!-- Tab 2: 首夜順序 -->
                        <TabItem Header="首夜順序">
                            <Border BorderBrush="#DDD" BorderThickness="0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- 標題 -->
                                    <Border Grid.Row="0" Background="#F5F5F5" BorderBrush="#DDD" 
                    BorderThickness="0,0,0,1" Padding="8">
                                        <TextBlock Text="首個夜晚" FontSize="12" FontWeight="Bold" 
                           HorizontalAlignment="Center"/>
                                    </Border>

                                    <!-- 角色列表 -->
                                    <ListBox Grid.Row="1" 
                     ItemsSource="{Binding FirstNightRoles}"
         SelectionChanged="NightOrderList_SelectionChanged"
                     BorderThickness="0">
                                        <ListBox.ItemContainerStyle>
                                            <Style TargetType="ListBoxItem">
                                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                                <Setter Property="Padding" Value="0"/>
                                                <Setter Property="Margin" Value="0"/>
                                            </Style>
                                        </ListBox.ItemContainerStyle>

                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="#DDD" BorderThickness="0,0,0,1" Padding="10,8">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Grid.Column="0"
                                           Text="{Binding Name}" 
                                           FontWeight="Bold" 
                                           FontSize="12"
                                           Foreground="Black"
                                           VerticalAlignment="Center"/>

                                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                            <StackPanel.Style>
                                                                <Style TargetType="StackPanel">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </StackPanel.Style>

                                                            <Button Content="▲" 
                                            Width="24" Height="24"
                                            FontSize="10"
                                            Margin="2,0,0,0"
                                            Padding="0"
                                            Click="MoveNightOrder_Click" Tag="FirstUp"
                                            ToolTip="上移"/>

                                                            <Button Content="▼" 
                                            Width="24" Height="24"
                                            FontSize="10"
                                            Margin="2,0,0,0"
                                            Padding="0"
                                            Click="MoveNightOrder_Click" Tag="FirstDown"
                                            ToolTip="下移"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Grid>
                            </Border>
                        </TabItem>

                        <!-- Tab 3: 其他夜順序 -->
                        <TabItem Header="其他夜順序">
                            <Border BorderBrush="#DDD" BorderThickness="0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- 標題 -->
                                    <Border Grid.Row="0" Background="#F5F5F5" BorderBrush="#DDD" 
                    BorderThickness="0,0,0,1" Padding="8">
                                        <TextBlock Text="其他夜晚" FontSize="12" FontWeight="Bold" 
                           HorizontalAlignment="Center"/>
                                    </Border>

                                    <!-- 角色列表 -->
                                    <ListBox Grid.Row="1" 
                     ItemsSource="{Binding OtherNightRoles}"
         SelectionChanged="NightOrderList_SelectionChanged"
                     BorderThickness="0">
                                        <ListBox.ItemContainerStyle>
                                            <Style TargetType="ListBoxItem">
                                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                                <Setter Property="Padding" Value="0"/>
                                                <Setter Property="Margin" Value="0"/>
                                            </Style>
                                        </ListBox.ItemContainerStyle>

                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="#DDD" BorderThickness="0,0,0,1" Padding="10,8">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Grid.Column="0"
                                           Text="{Binding Name}" 
                                           FontWeight="Bold" 
                                           FontSize="12"
                                           Foreground="Black"
                                           VerticalAlignment="Center"/>

                                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                            <StackPanel.Style>
                                                                <Style TargetType="StackPanel">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </StackPanel.Style>

                                                            <Button Content="▲" 
                                            Width="24" Height="24"
                                            FontSize="10"
                                            Margin="2,0,0,0"
                                            Padding="0"
                                            Click="MoveNightOrder_Click" Tag="OtherUp"
                                            ToolTip="上移"/>

                                                            <Button Content="▼" 
                                            Width="24" Height="24"
                                            FontSize="10"
                                            Margin="2,0,0,0"
                                            Padding="0"
                                            Click="MoveNightOrder_Click" Tag="OtherDown"
                                            ToolTip="下移"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Grid>
                            </Border>
                        </TabItem>
                    </TabControl>
                </Grid>
            </Border>

            <!-- 分隔線 -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" 
                          Background="#DDD"/>

            <!-- 右側面板: 角色編輯區 -->
            <Grid Grid.Column="2">
                <!-- 角色編輯表單 (有選擇時顯示) -->
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ScrollViewer.Style>
                        <Style TargetType="ScrollViewer">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedRole}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ScrollViewer.Style>
                    <!-- 🆕 用 Grid 包裹兩個編輯器 -->
                    <Grid>
                        <StackPanel x:Name="NormalRoleEditor" 
                             Margin="20">
                            <!-- 標題 -->
                            <TextBlock Text="角色編輯" FontSize="20" FontWeight="Bold" Margin="0,0,0,8"/>
                            <Border BorderBrush="#DDD" BorderThickness="0,0,0,1" Margin="0,0,0,12"/>

                            <!-- 第一行: 角色 ID + 角色名稱 -->
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <DockPanel Grid.Column="0">
                                    <TextBlock Text="角色 ID *" FontWeight="SemiBold" DockPanel.Dock="Left" 
                               VerticalAlignment="Center" Margin="0,0,8,0" Width="80"/>
                                    <TextBox Text="{Binding SelectedRole.Id, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="6,4" VerticalAlignment="Center">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Setter Property="BorderBrush" Value="#CCC"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedRole.Id, Converter={StaticResource StringNotEmptyConverter}}" Value="False">
                                                        <Setter Property="BorderBrush" Value="#F44336"/>
                                                        <Setter Property="BorderThickness" Value="2"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding SelectedRole.Id, Converter={StaticResource IdFormatValidationConverter}}" Value="False">
                                                        <Setter Property="BorderBrush" Value="#FF9800"/>
                                                        <Setter Property="BorderThickness" Value="2"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                </DockPanel>

                                <DockPanel Grid.Column="2">
                                    <TextBlock Text="角色名稱 *" FontWeight="SemiBold" DockPanel.Dock="Left" 
                               VerticalAlignment="Center" Margin="0,0,8,0" Width="80"/>
                                    <TextBox Text="{Binding SelectedRole.Name, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="6,4" VerticalAlignment="Center">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Setter Property="BorderBrush" Value="#CCC"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedRole.Name, Converter={StaticResource StringNotEmptyConverter}}" Value="False">
                                                        <Setter Property="BorderBrush" Value="#F44336"/>
                                                        <Setter Property="BorderThickness" Value="2"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                </DockPanel>
                            </Grid>

                            <!-- 第二行: 角色類型 + 英文名稱 -->
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <DockPanel Grid.Column="0">
                                    <TextBlock Text="角色類型 *" FontWeight="SemiBold" DockPanel.Dock="Left" 
                               VerticalAlignment="Center" Margin="0,0,8,0" Width="80"/>
                                    <ComboBox SelectedItem="{Binding SelectedRole.Team}" 
                              Padding="6,4" BorderBrush="#CCC" BorderThickness="1" VerticalAlignment="Center">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Converter={StaticResource TeamTypeConverter}}"/>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                        <models:TeamType>Townsfolk</models:TeamType>
                                        <models:TeamType>Outsider</models:TeamType>
                                        <models:TeamType>Minion</models:TeamType>
                                        <models:TeamType>Demon</models:TeamType>
                                        <models:TeamType>Traveler</models:TeamType>
                                        <models:TeamType>Fabled</models:TeamType>
                                        <models:TeamType>Jinxed</models:TeamType>
                                    </ComboBox>
                                </DockPanel>
                            </Grid>

                            <!-- 圖片 URL 列表 -->
                            <TextBlock Text="圖片 URL:" FontWeight="SemiBold" Margin="0,0,0,4"/>

                            <!-- 圖片列表 -->
                            <ItemsControl ItemsSource="{Binding SelectedRole.ImageItems}" Margin="0,0,0,8">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#DDD" BorderThickness="1" Padding="8" Margin="0,0,0,6" Background="White">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="60"/>
                                                    <ColumnDefinition Width="8"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="8"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- 預覽圖 -->
                                                <Border Grid.Column="0" 
                            Width="60" Height="60" 
                            BorderBrush="#CCC" BorderThickness="1" 
                            Background="#F9F9F9">
                                                    <Image Source="{Binding Url, Converter={StaticResource StringToImageSourceConverter}}" 
                               Stretch="Uniform"/>
                                                </Border>

                                                <!-- URL 輸入框 -->
                                                <TextBox Grid.Column="2" 
                             Text="{Binding Url, UpdateSourceTrigger=PropertyChanged}"
                             VerticalAlignment="Center" 
                             Padding="6,4"
                             BorderBrush="#CCC" 
                             BorderThickness="1"
                             TextChanged="ImageUrl_TextChanged"/>

                                                <!-- 刪除按鈕 -->
                                                <Button Grid.Column="4" 
                            Content="🗑️" 
                            Width="32" Height="32"
                            Click="DeleteImage_Click"
                            ToolTip="刪除"
                            Background="#F44336" 
                            Foreground="White" 
                            BorderThickness="0"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- 新增按鈕 + 說明 -->
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0" 
        Content="➕ 新增圖片" 
        Padding="12,6" 
        Click="AddImage_Click"
        Background="#4CAF50" 
        Foreground="White" 
        BorderThickness="0">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="IsEnabled" Value="True"/>
                                            <Style.Triggers>
                                                <!-- ✅ Bug Fix: 改綁定到 ImageItems.Count -->
                                                <DataTrigger Binding="{Binding SelectedRole.ImageItems.Count, Converter={StaticResource IntGreaterThanConverter}, ConverterParameter=2}" Value="True">
                                                    <Setter Property="IsEnabled" Value="False"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <TextBlock Grid.Column="1" 
               Text="說明: 集石格式僅使用第一張圖片 | 最多 3 張" 
               FontSize="11" 
               Foreground="#666" 
               VerticalAlignment="Center" 
               Margin="12,0,0,0"/>
                            </Grid>

                            <Border BorderBrush="#DDD" BorderThickness="0,0,0,1" Margin="0,4,0,10"/>

                            <!-- 第四行: 所屬版本 + 影響設置 -->
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <DockPanel Grid.Column="0">
                                    <TextBlock Text="所屬版本" FontWeight="SemiBold" DockPanel.Dock="Left" 
                               VerticalAlignment="Center" Margin="0,0,8,0" Width="80"/>
                                    <TextBox Text="{Binding SelectedRole.Edition, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="6,4" BorderBrush="#CCC" BorderThickness="1" VerticalAlignment="Center"/>
                                </DockPanel>

                                <CheckBox Grid.Column="2" 
                          Content="影響設置 (Setup)" 
                          IsChecked="{Binding SelectedRole.Setup}" 
                          FontSize="12" 
                          VerticalAlignment="Center"/>
                            </Grid>

                            <Border BorderBrush="#DDD" BorderThickness="0,0,0,1" Margin="0,4,0,10"/>

                            <!-- 能力描述 -->
                            <TextBlock Text="能力描述 *" FontWeight="SemiBold" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding SelectedRole.Ability, UpdateSourceTrigger=PropertyChanged}" 
                     TextWrapping="Wrap" AcceptsReturn="True" Height="80"
                     Padding="6,4" VerticalScrollBarVisibility="Auto">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="BorderBrush" Value="#CCC"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedRole.Ability, Converter={StaticResource StringNotEmptyConverter}}" Value="False">
                                                <Setter Property="BorderBrush" Value="#F44336"/>
                                                <Setter Property="BorderThickness" Value="2"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>

                            <Border BorderBrush="#DDD" BorderThickness="0,0,0,1" Margin="0,10"/>

                            <!-- 夜晚行動與說書人提示 -->
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- 左側：首個夜晚 -->
                                <Grid Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- 首夜順序 -->
                                    <DockPanel Grid.Row="0">
                                        <TextBlock Text="首夜順序" FontWeight="SemiBold" DockPanel.Dock="Left" 
                                   VerticalAlignment="Center" Margin="0,0,8,0" Width="70"/>
                                        <TextBox Text="{Binding SelectedRole.FirstNight, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="6,4" BorderBrush="#CCC" BorderThickness="1" VerticalAlignment="Center"/>
                                    </DockPanel>

                                    <!-- 首夜提示 -->
                                    <DockPanel Grid.Row="2">
                                        <TextBlock Text="首夜提示" FontWeight="SemiBold" FontSize="11" DockPanel.Dock="Left" 
                                   VerticalAlignment="Top" Margin="0,4,8,0" Width="70"/>
                                        <TextBox Text="{Binding SelectedRole.FirstNightReminder, UpdateSourceTrigger=PropertyChanged}" 
                                 TextWrapping="Wrap" AcceptsReturn="True" Height="90"
                                 Padding="6,4" BorderBrush="#CCC" BorderThickness="1" 
                                 FontSize="11" VerticalScrollBarVisibility="Auto"/>
                                    </DockPanel>
                                </Grid>

                                <!-- 右側：其他夜晚 -->
                                <Grid Grid.Column="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- 其他夜晚順序 -->
                                    <DockPanel Grid.Row="0">
                                        <TextBlock Text="其他夜晚" FontWeight="SemiBold" DockPanel.Dock="Left" 
                                   VerticalAlignment="Center" Margin="0,0,8,0" Width="70"/>
                                        <TextBox Text="{Binding SelectedRole.OtherNight, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="6,4" BorderBrush="#CCC" BorderThickness="1" VerticalAlignment="Center"/>
                                    </DockPanel>

                                    <!-- 其他夜提示 -->
                                    <DockPanel Grid.Row="2">
                                        <TextBlock Text="其他夜提示" FontWeight="SemiBold" FontSize="11" DockPanel.Dock="Left" 
                                   VerticalAlignment="Top" Margin="0,4,8,0" Width="70"/>
                                        <TextBox Text="{Binding SelectedRole.OtherNightReminder, UpdateSourceTrigger=PropertyChanged}" 
                                 TextWrapping="Wrap" AcceptsReturn="True" Height="90"
                                 Padding="6,4" BorderBrush="#CCC" BorderThickness="1" 
                                 FontSize="11" VerticalScrollBarVisibility="Auto"/>
                                    </DockPanel>
                                </Grid>
                            </Grid>

                            <Border BorderBrush="#DDD" BorderThickness="0,0,0,1" Margin="0,10"/>

                            <!-- 🆕 提示標記編輯器 -->
                            <TextBlock Text="提示標記" FontWeight="SemiBold" Margin="0,10,0,8"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- 左側：一般標記 -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="一般標記" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,4"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                        <Button Content="➕ 新增" Padding="6,3" FontSize="11"
            Click="ManageReminder_Click" Tag="Add|Normal"
            Background="#4CAF50" Foreground="White" BorderThickness="0" Margin="0,0,6,0"/>
                                        <Button Content="🗑️ 刪除" Padding="6,3" FontSize="11"
            Click="ManageReminder_Click" Tag="Remove|Normal"
            Background="#F44336" Foreground="White" BorderThickness="0"/>
                                    </StackPanel>

                                    <Border BorderBrush="#DDD" BorderThickness="1" 
        Height="100">
                                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                                            <ItemsControl x:Name="remindersList" ItemsSource="{Binding SelectedRole.Reminders}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border BorderBrush="#EEE" BorderThickness="0,0,0,1" Padding="6,4" Background="White">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="6"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>

                                                                <!-- 綁定到 ReminderItem.IsSelected -->
                                                                <CheckBox Grid.Column="0" 
                              IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"
                              VerticalAlignment="Center"/>

                                                                <!-- 綁定到 ReminderItem.Text -->
                                                                <TextBox Grid.Column="2" 
                             Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}" 
                             BorderThickness="0" 
                             Background="Transparent"
                             Padding="4,2"
                             FontSize="11"
                             VerticalAlignment="Center"/>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>
                                    </Border>
                                </StackPanel>

                                <!-- 右側：全局標記 -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="全局標記" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,4"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                        <Button Content="➕ 新增" Padding="6,3" FontSize="11"
            Click="ManageReminder_Click" Tag="Add|Global"
            Background="#4CAF50" Foreground="White" BorderThickness="0" Margin="0,0,6,0"/>
                                        <Button Content="🗑️ 刪除" Padding="6,3" FontSize="11"
            Click="ManageReminder_Click" Tag="Remove|Global"
            Background="#F44336" Foreground="White" BorderThickness="0"/>
                                    </StackPanel>

                                    <Border BorderBrush="#DDD" BorderThickness="1" 
        Height="100">
                                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                                            <ItemsControl x:Name="globalRemindersList" ItemsSource="{Binding SelectedRole.RemindersGlobal}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border BorderBrush="#EEE" BorderThickness="0,0,0,1" Padding="6,4" Background="White">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="6"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>

                                                                <!-- 綁定到 ReminderItem.IsSelected -->
                                                                <CheckBox Grid.Column="0" 
                              IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"
                              VerticalAlignment="Center"/>

                                                                <!-- 綁定到 ReminderItem.Text -->
                                                                <TextBox Grid.Column="2" 
                             Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}" 
                             BorderThickness="0" 
                             Background="Transparent"
                             Padding="4,2"
                             FontSize="11"
                             VerticalAlignment="Center"/>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>
                                    </Border>
                                </StackPanel>
                            </Grid>

                            <Border BorderBrush="#DDD" BorderThickness="0,0,0,1" Margin="0,10"/>


                            <Border BorderBrush="#DDD" BorderThickness="0,0,0,1" Margin="0,15"/>

                            <!-- 🔗 相剋規則 (Jinxes) -->
                            <TextBlock Text="🔗 相剋規則 (Jinxes)" FontWeight="SemiBold" FontSize="12" Margin="0,15,0,8"/>

                            <!-- Jinxes 列表 -->
                            <ItemsControl ItemsSource="{Binding SelectedRole.JinxItems}" Margin="0,0,0,8">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#DDD" BorderThickness="1" Padding="8" Margin="0,0,0,6" Background="White">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <!-- "相剋角色:" 標籤 -->
                                                    <ColumnDefinition Width="4"/>
                                                    <!-- 間距 -->
                                                    <ColumnDefinition Width="120"/>
                                                    <!-- ComboBox -->
                                                    <ColumnDefinition Width="8"/>
                                                    <!-- 間距 -->
                                                    <ColumnDefinition Width="Auto"/>
                                                    <!-- "規則說明:" 標籤 -->
                                                    <ColumnDefinition Width="4"/>
                                                    <!-- 間距 -->
                                                    <ColumnDefinition Width="*"/>
                                                    <!-- TextBox 自動填滿 -->
                                                    <ColumnDefinition Width="4"/>
                                                    <!-- 間距 -->
                                                    <ColumnDefinition Width="32"/>
                                                    <!-- 刪除按鈕 -->
                                                </Grid.ColumnDefinitions>

                                                <!-- 相剋角色標籤 -->
                                                <TextBlock Grid.Column="0" 
                               Text="相剋角色:" 
                               VerticalAlignment="Center" 
                               FontSize="11"/>

                                                <!-- 角色選擇 ComboBox -->
                                                <ComboBox Grid.Column="2"
                              ItemsSource="{Binding DataContext.AvailableRoleNamesForJinx, RelativeSource={RelativeSource AncestorType=Window}}"
                              SelectedItem="{Binding TargetRoleName, UpdateSourceTrigger=PropertyChanged}"
                              VerticalAlignment="Center"
                              Padding="4,2"
                              BorderBrush="#CCC"
                              BorderThickness="1"/>

                                                <!-- 規則說明標籤 -->
                                                <TextBlock Grid.Column="4" 
                               Text="規則說明:" 
                               VerticalAlignment="Center" 
                               FontSize="11"/>

                                                <!-- 規則說明輸入框 -->
                                                <TextBox Grid.Column="6"
                             Text="{Binding Reason, UpdateSourceTrigger=PropertyChanged}"
                             VerticalAlignment="Center"
                             Padding="6,4"
                             BorderBrush="#CCC"
                             BorderThickness="1"
                             TextWrapping="Wrap"
                             AcceptsReturn="False"
                             TextChanged="JinxReason_TextChanged"/>

                                                <!-- 刪除按鈕 -->
                                                <Button Grid.Column="8" 
                            Content="🗑️" 
                            Width="32" Height="32"
                            Click="DeleteJinx_Click"
                            ToolTip="刪除"
                            VerticalAlignment="Center"
                            Padding="0"
                            Background="#F44336" 
                            Foreground="White" 
                            BorderThickness="0"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- 新增 Jinx 按鈕 -->
                            <Button Content="➕ 新增 Jinx" 
        Width="120" 
        HorizontalAlignment="Left"
        Margin="0,0,0,8"
        Click="AddJinx_Click"
        Padding="8,4"
        Background="#4CAF50" 
        Foreground="White" 
        BorderThickness="0"/>

                            <!-- 備註（原風味文字） -->
                            <TextBlock Text="備註" FontWeight="SemiBold" Margin="0,10,0,4"/>
                            <TextBox Text="{Binding SelectedRole.Flavor, UpdateSourceTrigger=PropertyChanged}" 
                     TextWrapping="Wrap" AcceptsReturn="True" Height="60"
                     Padding="6,4" BorderBrush="#CCC" BorderThickness="1" 
                     FontSize="11" VerticalScrollBarVisibility="Auto"/>

                            <!-- 底部說明 -->
                            <Border Background="#F0F8FF" Padding="12" Margin="0,15,0,0" CornerRadius="3">
                                <StackPanel>
                                    <TextBlock Text="💡 編輯提示" FontWeight="Bold" FontSize="11" Margin="0,0,0,4"/>
                                    <TextBlock TextWrapping="Wrap" FontSize="10" Foreground="#333">
                        • 標記 * 的欄位為必填，空白時會顯示紅色邊框<LineBreak/>
                        • 所有變更即時儲存，記得按「檔案 > 儲存」寫入檔案
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- ========== 相剋規則專用 UI 區塊 ========== -->
                        <StackPanel x:Name="JinxedRoleEditor" 
            Margin="20"
            Visibility="Collapsed">

                            <!-- 標題 -->
                            <TextBlock Text="相剋規則編輯" 
               FontSize="20" 
               FontWeight="Bold" 
               Margin="0,0,0,8"/>
                            <Border BorderBrush="#DDD" 
            BorderThickness="0,0,0,1" 
            Margin="0,0,0,12"/>

                            <!-- ===== 自動生成欄位區塊 (唯讀) ===== -->

                            <!-- 第一行: ID 和 名稱 左右並排 -->
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- ID -->
                                <DockPanel Grid.Column="0">
                                    <TextBlock Text="ID" 
                       FontWeight="SemiBold" 
                       DockPanel.Dock="Left" 
                       VerticalAlignment="Center" 
                       Width="50"/>
                                    <TextBlock Text="🔒 自動生成" 
                       FontSize="9" 
                       Foreground="#999" 
                       DockPanel.Dock="Right" 
                       VerticalAlignment="Center" 
                       Margin="4,0,0,0"/>
                                    <TextBox Text="{Binding SelectedRole.Id, Mode=OneWay}" 
                     IsReadOnly="True" 
                     Background="#F5F5F5" 
                     Padding="6,4" 
                     BorderBrush="#CCC" 
                     BorderThickness="1" 
                     VerticalAlignment="Center"/>
                                </DockPanel>

                                <!-- 名稱 -->
                                <DockPanel Grid.Column="2">
                                    <TextBlock Text="名稱" 
                       FontWeight="SemiBold" 
                       DockPanel.Dock="Left" 
                       VerticalAlignment="Center" 
                       Width="50"/>
                                    <TextBlock Text="🔒 自動生成" 
                       FontSize="9" 
                       Foreground="#999" 
                       DockPanel.Dock="Right" 
                       VerticalAlignment="Center" 
                       Margin="4,0,0,0"/>
                                    <TextBox Text="{Binding SelectedRole.Name, Mode=OneWay}" 
                     IsReadOnly="True" 
                     Background="#F5F5F5" 
                     Padding="6,4" 
                     BorderBrush="#CCC" 
                     BorderThickness="1" 
                     VerticalAlignment="Center"/>
                                </DockPanel>
                            </Grid>

                            <!-- 第二行: 類型 -->
                            <DockPanel Margin="0,0,0,8">
                                <TextBlock Text="類型" 
                   FontWeight="SemiBold" 
                   DockPanel.Dock="Left" 
                   VerticalAlignment="Center" 
                   Width="50"/>
                                <TextBlock Text="🔒 固定值" 
                   FontSize="9" 
                   Foreground="#999" 
                   DockPanel.Dock="Right" 
                   VerticalAlignment="Center" 
                   Margin="4,0,0,0"/>
                                <TextBox Text="a jinxed" 
                 IsReadOnly="True" 
                 Background="#F5F5F5" 
                 Padding="6,4" 
                 BorderBrush="#CCC" 
                 BorderThickness="1" 
                 VerticalAlignment="Center"/>
                            </DockPanel>

                            <Border BorderBrush="#DDD" 
            BorderThickness="0,0,0,1" 
            Margin="0,8"/>

                            <!-- ===== 角色選擇區塊 ===== -->

                            <!-- 相剋角色1 和 相剋角色2 左右並排 -->
                            <Grid Margin="0,15,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- 相剋角色1 -->
                                <DockPanel Grid.Column="0">
                                    <TextBlock Text="相剋角色 1 *" 
                       FontWeight="SemiBold" 
                       DockPanel.Dock="Left" 
                       VerticalAlignment="Center" 
                       Width="90"/>
                                    <ComboBox x:Name="cmbJinxRole1"
                      SelectedItem="{Binding SelectedRole.JinxRole1Name, UpdateSourceTrigger=PropertyChanged}"
                      Padding="6,4"
                      BorderBrush="#CCC"
                      BorderThickness="1"
                      VerticalAlignment="Center">
                                        <!-- 暫時使用靜態項目，後續會改為動態綁定 -->
                                        <ComboBoxItem Content="(請選擇角色)"/>
                                    </ComboBox>
                                </DockPanel>

                                <!-- 相剋角色2 -->
                                <DockPanel Grid.Column="2">
                                    <TextBlock Text="相剋角色 2 *" 
                       FontWeight="SemiBold" 
                       DockPanel.Dock="Left" 
                       VerticalAlignment="Center" 
                       Width="90"/>
                                    <ComboBox x:Name="cmbJinxRole2"
                      SelectedItem="{Binding SelectedRole.JinxRole2Name, UpdateSourceTrigger=PropertyChanged}"
                      Padding="6,4"
                      BorderBrush="#CCC"
                      BorderThickness="1"
                      VerticalAlignment="Center">
                                        <!-- 暫時使用靜態項目，後續會改為動態綁定 -->
                                        <ComboBoxItem Content="(請選擇角色)"/>
                                    </ComboBox>
                                </DockPanel>
                            </Grid>

                            <Border BorderBrush="#DDD" 
            BorderThickness="0,0,0,1" 
            Margin="0,8"/>

                            <!-- ===== 規則說明區塊 ===== -->

                            <DockPanel Margin="0,15,0,8">
                                <TextBlock Text="相剋規則說明 *" 
                   FontWeight="SemiBold" 
                   DockPanel.Dock="Left" 
                   VerticalAlignment="Top" 
                   Margin="0,4,8,0" 
                   Width="110"/>
                                <TextBox Text="{Binding SelectedRole.Ability, UpdateSourceTrigger=PropertyChanged}" 
                 TextWrapping="Wrap" 
                 AcceptsReturn="True" 
                 Height="100"
                 Padding="6,4" 
                 BorderBrush="#CCC" 
                 BorderThickness="1" 
                 FontSize="11" 
                 VerticalScrollBarVisibility="Auto"/>
                            </DockPanel>

                            <Border BorderBrush="#DDD" 
            BorderThickness="0,0,0,1" 
            Margin="0,8"/>

                            <!-- ===== 圖片 URL 區塊 (選填) ===== -->

                            <TextBlock Text="圖片 URL (選填)" 
               FontWeight="SemiBold" 
               Margin="0,15,0,8"/>

                            <!-- 圖片列表 (複用一般角色的圖片編輯區塊) -->
                            <ItemsControl ItemsSource="{Binding SelectedRole.ImageItems}" 
                  Margin="0,0,0,8">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#DDD" 
                        BorderThickness="1" 
                        Padding="8" 
                        Margin="0,0,0,6" 
                        Background="White">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="60"/>
                                                    <ColumnDefinition Width="8"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="8"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Border Grid.Column="0" 
                                Width="60" 
                                Height="60" 
                                BorderBrush="#CCC" 
                                BorderThickness="1" 
                                Background="#F9F9F9">
                                                    <Image Source="{Binding Url, Converter={StaticResource StringToImageSourceConverter}}" 
                                   Stretch="Uniform"/>
                                                </Border>

                                                <TextBox Grid.Column="2" 
                                 Text="{Binding Url, UpdateSourceTrigger=PropertyChanged}"
                                 VerticalAlignment="Center" 
                                 Padding="6,4"
                                 BorderBrush="#CCC" 
                                 BorderThickness="1"
                                 TextChanged="ImageUrl_TextChanged"/>

                                                <Button Grid.Column="4" 
                                Content="🗑️" 
                                Width="32" 
                                Height="32"
                                Click="DeleteImage_Click" 
                                ToolTip="刪除"
                                Background="#F44336" 
                                Foreground="White" 
                                BorderThickness="0"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <Button Content="➕ 新增圖片" 
            Width="120" 
            HorizontalAlignment="Left"
            Click="AddImage_Click" 
            Padding="8,4"
            Background="#4CAF50" 
            Foreground="White" 
            BorderThickness="0"/>

                            <Border BorderBrush="#DDD" 
            BorderThickness="0,0,0,1" 
            Margin="0,15"/>

                            <!-- ===== 提示區塊 ===== -->

                            <Border Background="#F0F8FF" 
            Padding="12" 
            Margin="0,15,0,0" 
            CornerRadius="3">
                                <StackPanel>
                                    <TextBlock Text="💡 提示" 
                       FontWeight="Bold" 
                       FontSize="11" 
                       Margin="0,0,0,4"/>
                                    <TextBlock TextWrapping="Wrap" 
                       FontSize="10" 
                       Foreground="#333"
                       xml:space="preserve">• ID 格式: {角色1_id}_{角色2_id}
• 名稱格式: {角色1名稱}&amp;{角色2名稱}
• 陣營固定為 "a jinxed"
• 夜晚順序、提示標記等欄位自動使用預設值</TextBlock>
                                </StackPanel>
                            </Border>

                        </StackPanel>
                    </Grid>

                </ScrollViewer>

                <!-- 未選擇角色時的提示 -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedRole}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <TextBlock Text="📋" FontSize="72" HorizontalAlignment="Center" Opacity="0.3"/>
                    <TextBlock Text="請從左側選擇一個角色進行編輯" 
                   FontSize="16" Foreground="Gray" 
                   HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- 狀態列 -->
        <StatusBar Grid.Row="2" Background="#F0F0F0">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage, Mode=OneWay}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock>
                    <Run Text="選中: "/>
                    <Run Text="{Binding SelectedRole.Name, Mode=OneWay, TargetNullValue='無'}"/>
                </TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>