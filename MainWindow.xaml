<Window x:Class="BloodClockTowerScriptEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BloodClockTowerScriptEditor"
        xmlns:models="clr-namespace:BloodClockTowerScriptEditor.Models"
        xmlns:converters="clr-namespace:BloodClockTowerScriptEditor.Converters"
        mc:Ignorable="d"
        Title="Blood on the Clocktower 劇本編輯器" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- 轉換器 -->
        <converters:TeamTypeConverter x:Key="TeamTypeConverter"/>
        <converters:NullToBooleanConverter x:Key="NullToBooleanConverter"/>
        <converters:IdFormatValidationConverter x:Key="IdFormatValidationConverter"/>
        <converters:StringNotEmptyConverter x:Key="StringNotEmptyConverter"/>
        <converters:StringToImageSourceConverter x:Key="StringToImageSourceConverter"/>

        <!-- 陣營顏色 -->
        <SolidColorBrush x:Key="TownsfolkBrush" Color="#368CE1"/>
        <SolidColorBrush x:Key="OutsiderBrush" Color="#71A8D6"/>
        <SolidColorBrush x:Key="MinionBrush" Color="#DC3545"/>
        <SolidColorBrush x:Key="DemonBrush" Color="#8B0000"/>
        <SolidColorBrush x:Key="TravelerBrush" Color="#808080"/>
        <SolidColorBrush x:Key="FabledBrush" Color="#FFC107"/>

        <!-- 標籤樣式 -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- 文字框樣式 -->
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- 多行文字框樣式 -->
        <Style x:Key="MultiLineTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource TextBoxStyle}">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="MinHeight" Value="80"/>
        </Style>

        <!-- 驗證錯誤樣式 -->
        <Style x:Key="ValidatedTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource TextBoxStyle}">
            <Style.Triggers>
                <!-- 當驗證失敗時顯示紅色邊框 -->
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="BorderBrush" Value="#F44336"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 選單列 -->
        <Menu Grid.Row="0">
            <MenuItem Header="檔案(_F)">
                <!-- 🆕 新增: 新增檔案 -->
                <MenuItem Header="新增檔案(_N)" 
                  Command="{Binding NewFileCommand}"
                  InputGestureText="Ctrl+N">
                    <MenuItem.Icon>
                        <TextBlock Text="📄" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>

                <Separator/>

                <!-- 原有的開啟舊檔 -->
                <MenuItem Header="開啟舊檔(_O)" 
                  Command="{Binding LoadJsonCommand}"
                  InputGestureText="Ctrl+O">
                    <MenuItem.Icon>
                        <TextBlock Text="📂" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>

                <Separator/>

                <!-- 原有的儲存檔案 -->
                <MenuItem Header="儲存檔案(_S)" 
                  Command="{Binding SaveJsonCommand}"
                  InputGestureText="Ctrl+S">
                    <MenuItem.Icon>
                        <TextBlock Text="💾" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>

                <!-- 原有的另存新檔 -->
                <MenuItem Header="另存新檔(_A)" 
                  Command="{Binding SaveAsJsonCommand}"
                  InputGestureText="Ctrl+Shift+S">
                    <MenuItem.Icon>
                        <TextBlock Text="📝" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>

                <Separator/>

                <!-- 原有的結束 -->
                <MenuItem Header="結束(_X)" Click="Exit_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="❌" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="說明(_H)">
                <MenuItem Header="關於(_A)" Click="About_Click"/>
            </MenuItem>
        </Menu>

        <!-- 主要內容區 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左側面板: 篩選 + 按鈕 + 角色列表/夜晚順序 -->
            <Border Grid.Column="0" BorderBrush="#DDD" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- 劇本資訊 -->
                        <RowDefinition Height="*"/>
                        <!-- TabControl (包含篩選+按鈕+列表) -->
                    </Grid.RowDefinitions>

                    <!-- 劇本資訊 -->
                    <Border Grid.Row="0" Margin="10" Background="#F5F5F5" Padding="10" BorderBrush="#CCC" BorderThickness="1">
                        <DockPanel>
                            <!-- 標題和按鈕 -->
                            <DockPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                                <TextBlock Text="劇本資訊" FontWeight="Bold" FontSize="14" 
                               DockPanel.Dock="Left" VerticalAlignment="Center"/>
                                <Button Content="✏️ 編輯" Padding="6,3" FontSize="11"
                            HorizontalAlignment="Right"
                            Command="{Binding EditScriptMetaCommand}"
                            Background="#FF4A90E2" Foreground="White" BorderThickness="0"/>
                            </DockPanel>

                            <!-- Logo 預覽和名稱 -->
                            <StackPanel HorizontalAlignment="Center">
                                <Border BorderBrush="#CCC" BorderThickness="1" Background="White" 
                            Height="80" Width="160" Margin="0,0,0,8">
                                    <Image Source="{Binding CurrentScript.Meta.Logo, Converter={StaticResource StringToImageSourceConverter}}"  
                               Stretch="Uniform" Margin="4"/>
                                </Border>
                                <TextBlock Text="{Binding CurrentScript.Meta.Name}" 
                               FontWeight="Bold" FontSize="13"
                               TextAlignment="Center" TextWrapping="Wrap"/>
                            </StackPanel>
                        </DockPanel>
                    </Border>

                    <!-- TabControl -->
                    <TabControl Grid.Row="1" Margin="10,0,10,10" >
                        <!-- Tab 1: 角色列表 (含篩選和按鈕) -->
                        <TabItem Header="角色列表">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <!-- 陣營篩選 -->
                                    <RowDefinition Height="Auto"/>
                                    <!-- 按鈕區 -->
                                    <RowDefinition Height="*"/>
                                    <!-- 角色列表 -->
                                </Grid.RowDefinitions>

                                <!-- 陣營篩選 -->
                                <StackPanel Grid.Row="0" Margin="0,10,0,10">
                                    <TextBlock Text="陣營篩選" FontWeight="Bold" FontSize="12" Margin="0,0,0,5"/>
                                    <WrapPanel>
                                        <CheckBox Content="鎮民" IsChecked="{Binding ShowTownsfolk}" Margin="0,0,10,5"/>
                                        <CheckBox Content="外來者" IsChecked="{Binding ShowOutsiders}" Margin="0,0,10,5"/>
                                        <CheckBox Content="爪牙" IsChecked="{Binding ShowMinions}" Margin="0,0,10,5"/>
                                        <CheckBox Content="惡魔" IsChecked="{Binding ShowDemons}" Margin="0,0,10,5"/>
                                        <CheckBox Content="旅行者" IsChecked="{Binding ShowTravelers}" Margin="0,0,10,5"/>
                                        <CheckBox Content="傳奇" IsChecked="{Binding ShowFabled}" Margin="0,0,0,5"/>
                                        <CheckBox Content="相剋" IsChecked="{Binding ShowJinxed}" Margin="10,0,0,5"/>
                                    </WrapPanel>
                                </StackPanel>

                                <!-- 按鈕區 -->
                                <Border Grid.Row="1" Background="#F5F5F5" Padding="8,10" Margin="0,0,0,10">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Button Content="➕" Width="30" Height="30" Margin="0,0,5,0"
                    Command="{Binding AddFromOfficialTemplateCommand}"
                    Background="#4CAF50" Foreground="White" BorderThickness="0"
                    FontSize="16" FontWeight="Bold"
                    ToolTip="新增角色"/>
                                    <Button Content="🗑️" Width="30" Height="30"
                    Command="{Binding RemoveRoleCommand}"
                    Background="#F44336" Foreground="White" BorderThickness="0"
                    FontSize="14" FontWeight="Bold"
                    ToolTip="刪除角色"/>
                                    </StackPanel>
                                </Border>

                                <!-- 角色列表 -->
                                <ListBox Grid.Row="2" 
                 ItemsSource="{Binding FilteredRoles}"
                 SelectedItem="{Binding SelectedRole}"
                 BorderThickness="0">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                                <!-- 角色圖片縮圖 -->
                                                <Border Width="40" Height="40" 
                    BorderBrush="#DDD" 
                    BorderThickness="1"
                    Background="White"
                    Margin="0,0,10,0"
                    VerticalAlignment="Center">
                                                    <Grid>
                                                        <Image Source="{Binding Image, Converter={StaticResource StringToImageSourceConverter}}" 
                           Stretch="Uniform"
                           Margin="2">
                                                            <Image.Style>
                                                                <Style TargetType="Image">
                                                                    <Style.Triggers>
                                                                        <Trigger Property="Source" Value="{x:Null}">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Image.Style>
                                                        </Image>

                                                        <TextBlock Text="🎭" 
                               FontSize="24"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="#999">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Image}" Value="{x:Null}">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Image}" Value="">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </Grid>
                                                </Border>

                                                <!-- 陣營色塊 -->
                                                <Border Width="4" Height="40" VerticalAlignment="Center" Margin="0,0,8,0">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Team}" Value="Townsfolk">
                                                                    <Setter Property="Background" Value="{StaticResource TownsfolkBrush}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Team}" Value="Outsider">
                                                                    <Setter Property="Background" Value="{StaticResource OutsiderBrush}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Team}" Value="Minion">
                                                                    <Setter Property="Background" Value="{StaticResource MinionBrush}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Team}" Value="Demon">
                                                                    <Setter Property="Background" Value="{StaticResource DemonBrush}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Team}" Value="Traveler">
                                                                    <Setter Property="Background" Value="{StaticResource TravelerBrush}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Team}" Value="Fabled">
                                                                    <Setter Property="Background" Value="{StaticResource FabledBrush}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                </Border>

                                                <!-- 角色資訊 -->
                                                <StackPanel VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="13"/>
                                                    <TextBlock Text="{Binding TeamDisplayName}" 
                           FontSize="11" Foreground="Gray"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </TabItem>

                        <!-- Tab 2: 首夜順序 -->
                        <TabItem Header="首夜順序">
                            <Border BorderBrush="#DDD" BorderThickness="0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- 標題 -->
                                    <Border Grid.Row="0" Background="#F5F5F5" BorderBrush="#DDD" 
                    BorderThickness="0,0,0,1" Padding="8">
                                        <TextBlock Text="首個夜晚" FontSize="12" FontWeight="Bold" 
                           HorizontalAlignment="Center"/>
                                    </Border>

                                    <!-- 角色列表 -->
                                    <ListBox Grid.Row="1" 
                     ItemsSource="{Binding FirstNightRoles}"
                     SelectedItem="{Binding SelectedRole}"
                     BorderThickness="0">
                                        <ListBox.ItemContainerStyle>
                                            <Style TargetType="ListBoxItem">
                                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                                <Setter Property="Padding" Value="0"/>
                                                <Setter Property="Margin" Value="0"/>
                                            </Style>
                                        </ListBox.ItemContainerStyle>

                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="#DDD" BorderThickness="0,0,0,1" Padding="10,8">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Grid.Column="0"
                                           Text="{Binding Name}" 
                                           FontWeight="Bold" 
                                           FontSize="12"
                                           Foreground="Black"
                                           VerticalAlignment="Center"/>

                                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                            <StackPanel.Style>
                                                                <Style TargetType="StackPanel">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </StackPanel.Style>

                                                            <Button Content="▲" 
                                            Width="24" Height="24"
                                            FontSize="10"
                                            Margin="2,0,0,0"
                                            Padding="0"
                                            Click="MoveUpFirstNight_Click"
                                            Tag="{Binding}"
                                            ToolTip="上移"/>

                                                            <Button Content="▼" 
                                            Width="24" Height="24"
                                            FontSize="10"
                                            Margin="2,0,0,0"
                                            Padding="0"
                                            Click="MoveDownFirstNight_Click"
                                            Tag="{Binding}"
                                            ToolTip="下移"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Grid>
                            </Border>
                        </TabItem>

                        <!-- Tab 3: 其他夜順序 -->
                        <TabItem Header="其他夜順序">
                            <Border BorderBrush="#DDD" BorderThickness="0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- 標題 -->
                                    <Border Grid.Row="0" Background="#F5F5F5" BorderBrush="#DDD" 
                    BorderThickness="0,0,0,1" Padding="8">
                                        <TextBlock Text="其他夜晚" FontSize="12" FontWeight="Bold" 
                           HorizontalAlignment="Center"/>
                                    </Border>

                                    <!-- 角色列表 -->
                                    <ListBox Grid.Row="1" 
                     ItemsSource="{Binding OtherNightRoles}"
                     SelectedItem="{Binding SelectedRole}"
                     BorderThickness="0">
                                        <ListBox.ItemContainerStyle>
                                            <Style TargetType="ListBoxItem">
                                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                                <Setter Property="Padding" Value="0"/>
                                                <Setter Property="Margin" Value="0"/>
                                            </Style>
                                        </ListBox.ItemContainerStyle>

                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="#DDD" BorderThickness="0,0,0,1" Padding="10,8">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Grid.Column="0"
                                           Text="{Binding Name}" 
                                           FontWeight="Bold" 
                                           FontSize="12"
                                           Foreground="Black"
                                           VerticalAlignment="Center"/>

                                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                            <StackPanel.Style>
                                                                <Style TargetType="StackPanel">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </StackPanel.Style>

                                                            <Button Content="▲" 
                                            Width="24" Height="24"
                                            FontSize="10"
                                            Margin="2,0,0,0"
                                            Padding="0"
                                            Click="MoveUpOtherNight_Click"
                                            Tag="{Binding}"
                                            ToolTip="上移"/>

                                                            <Button Content="▼" 
                                            Width="24" Height="24"
                                            FontSize="10"
                                            Margin="2,0,0,0"
                                            Padding="0"
                                            Click="MoveDownOtherNight_Click"
                                            Tag="{Binding}"
                                            ToolTip="下移"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Grid>
                            </Border>
                        </TabItem>
                    </TabControl>
                </Grid>
            </Border>

            <!-- 分隔線 -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" 
                          Background="#DDD"/>

            <!-- 右側面板: 角色編輯區 -->
            <Grid Grid.Column="2">
                <!-- 角色編輯表單 (有選擇時顯示) -->
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ScrollViewer.Style>
                        <Style TargetType="ScrollViewer">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedRole}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ScrollViewer.Style>

                    <StackPanel Margin="20">
                        <!-- 標題 -->
                        <TextBlock Text="角色編輯" FontSize="20" FontWeight="Bold" Margin="0,0,0,8"/>
                        <Border BorderBrush="#DDD" BorderThickness="0,0,0,1" Margin="0,0,0,12"/>

                        <!-- 第一行: 角色 ID + 角色名稱 -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <DockPanel Grid.Column="0">
                                <TextBlock Text="角色 ID *" FontWeight="SemiBold" DockPanel.Dock="Left" 
                               VerticalAlignment="Center" Margin="0,0,8,0" Width="80"/>
                                <TextBox Text="{Binding SelectedRole.Id, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="6,4" VerticalAlignment="Center">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="BorderBrush" Value="#CCC"/>
                                            <Setter Property="BorderThickness" Value="1"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedRole.Id, Converter={StaticResource StringNotEmptyConverter}}" Value="False">
                                                    <Setter Property="BorderBrush" Value="#F44336"/>
                                                    <Setter Property="BorderThickness" Value="2"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding SelectedRole.Id, Converter={StaticResource IdFormatValidationConverter}}" Value="False">
                                                    <Setter Property="BorderBrush" Value="#FF9800"/>
                                                    <Setter Property="BorderThickness" Value="2"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </DockPanel>

                            <DockPanel Grid.Column="2">
                                <TextBlock Text="角色名稱 *" FontWeight="SemiBold" DockPanel.Dock="Left" 
                               VerticalAlignment="Center" Margin="0,0,8,0" Width="80"/>
                                <TextBox Text="{Binding SelectedRole.Name, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="6,4" VerticalAlignment="Center">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="BorderBrush" Value="#CCC"/>
                                            <Setter Property="BorderThickness" Value="1"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedRole.Name, Converter={StaticResource StringNotEmptyConverter}}" Value="False">
                                                    <Setter Property="BorderBrush" Value="#F44336"/>
                                                    <Setter Property="BorderThickness" Value="2"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </DockPanel>
                        </Grid>

                        <!-- 第二行: 角色類型 + 英文名稱 -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <DockPanel Grid.Column="0">
                                <TextBlock Text="角色類型 *" FontWeight="SemiBold" DockPanel.Dock="Left" 
                               VerticalAlignment="Center" Margin="0,0,8,0" Width="80"/>
                                <ComboBox SelectedItem="{Binding SelectedRole.Team}" 
                              Padding="6,4" BorderBrush="#CCC" BorderThickness="1" VerticalAlignment="Center">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Converter={StaticResource TeamTypeConverter}}"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                    <models:TeamType>Townsfolk</models:TeamType>
                                    <models:TeamType>Outsider</models:TeamType>
                                    <models:TeamType>Minion</models:TeamType>
                                    <models:TeamType>Demon</models:TeamType>
                                    <models:TeamType>Traveler</models:TeamType>
                                    <models:TeamType>Fabled</models:TeamType>
                                    <models:TeamType>Jinxed</models:TeamType>
                                </ComboBox>
                            </DockPanel>

                            <DockPanel Grid.Column="2">
                                <TextBlock Text="英文名稱" FontWeight="SemiBold" DockPanel.Dock="Left" 
                               VerticalAlignment="Center" Margin="0,0,8,0" Width="80"/>
                                <TextBox Text="{Binding SelectedRole.NameEng, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="6,4" BorderBrush="#CCC" BorderThickness="1" VerticalAlignment="Center"/>
                            </DockPanel>
                        </Grid>

                        <!-- 第三行: 圖片 URL (獨立一列) -->
                        <DockPanel Margin="0,0,0,8">
                            <TextBlock Text="圖片 URL" FontWeight="SemiBold" DockPanel.Dock="Left" 
                           VerticalAlignment="Center" Margin="0,0,8,0" Width="80"/>
                            <TextBox Text="{Binding SelectedRole.Image, UpdateSourceTrigger=PropertyChanged}" 
                         Padding="6,4" BorderBrush="#CCC" BorderThickness="1" VerticalAlignment="Center"/>
                        </DockPanel>

                        <!-- 第四行: 所屬版本 + 影響設置 -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <DockPanel Grid.Column="0">
                                <TextBlock Text="所屬版本" FontWeight="SemiBold" DockPanel.Dock="Left" 
                               VerticalAlignment="Center" Margin="0,0,8,0" Width="80"/>
                                <TextBox Text="{Binding SelectedRole.Edition, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="6,4" BorderBrush="#CCC" BorderThickness="1" VerticalAlignment="Center"/>
                            </DockPanel>

                            <CheckBox Grid.Column="2" 
                          Content="影響設置 (Setup)" 
                          IsChecked="{Binding SelectedRole.Setup}" 
                          FontSize="12" 
                          VerticalAlignment="Center"/>
                        </Grid>

                        <Border BorderBrush="#DDD" BorderThickness="0,0,0,1" Margin="0,4,0,10"/>

                        <!-- 能力描述 -->
                        <TextBlock Text="能力描述 *" FontWeight="SemiBold" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding SelectedRole.Ability, UpdateSourceTrigger=PropertyChanged}" 
                     TextWrapping="Wrap" AcceptsReturn="True" Height="80"
                     Padding="6,4" VerticalScrollBarVisibility="Auto">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="BorderBrush" Value="#CCC"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedRole.Ability, Converter={StaticResource StringNotEmptyConverter}}" Value="False">
                                            <Setter Property="BorderBrush" Value="#F44336"/>
                                            <Setter Property="BorderThickness" Value="2"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>

                        <Border BorderBrush="#DDD" BorderThickness="0,0,0,1" Margin="0,10"/>

                        <!-- 夜晚行動與說書人提示 -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- 左側：首個夜晚 -->
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- 首夜順序 -->
                                <DockPanel Grid.Row="0">
                                    <TextBlock Text="首夜順序" FontWeight="SemiBold" DockPanel.Dock="Left" 
                                   VerticalAlignment="Center" Margin="0,0,8,0" Width="70"/>
                                    <TextBox Text="{Binding SelectedRole.FirstNight, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="6,4" BorderBrush="#CCC" BorderThickness="1" VerticalAlignment="Center"/>
                                </DockPanel>

                                <!-- 首夜提示 -->
                                <DockPanel Grid.Row="2">
                                    <TextBlock Text="首夜提示" FontWeight="SemiBold" FontSize="11" DockPanel.Dock="Left" 
                                   VerticalAlignment="Top" Margin="0,4,8,0" Width="70"/>
                                    <TextBox Text="{Binding SelectedRole.FirstNightReminder, UpdateSourceTrigger=PropertyChanged}" 
                                 TextWrapping="Wrap" AcceptsReturn="True" Height="90"
                                 Padding="6,4" BorderBrush="#CCC" BorderThickness="1" 
                                 FontSize="11" VerticalScrollBarVisibility="Auto"/>
                                </DockPanel>
                            </Grid>

                            <!-- 右側：其他夜晚 -->
                            <Grid Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- 其他夜晚順序 -->
                                <DockPanel Grid.Row="0">
                                    <TextBlock Text="其他夜晚" FontWeight="SemiBold" DockPanel.Dock="Left" 
                                   VerticalAlignment="Center" Margin="0,0,8,0" Width="70"/>
                                    <TextBox Text="{Binding SelectedRole.OtherNight, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="6,4" BorderBrush="#CCC" BorderThickness="1" VerticalAlignment="Center"/>
                                </DockPanel>

                                <!-- 其他夜提示 -->
                                <DockPanel Grid.Row="2">
                                    <TextBlock Text="其他夜提示" FontWeight="SemiBold" FontSize="11" DockPanel.Dock="Left" 
                                   VerticalAlignment="Top" Margin="0,4,8,0" Width="70"/>
                                    <TextBox Text="{Binding SelectedRole.OtherNightReminder, UpdateSourceTrigger=PropertyChanged}" 
                                 TextWrapping="Wrap" AcceptsReturn="True" Height="90"
                                 Padding="6,4" BorderBrush="#CCC" BorderThickness="1" 
                                 FontSize="11" VerticalScrollBarVisibility="Auto"/>
                                </DockPanel>
                            </Grid>
                        </Grid>

                        <Border BorderBrush="#DDD" BorderThickness="0,0,0,1" Margin="0,10"/>

                        <!-- 🆕 提示標記編輯器 -->
                        <TextBlock Text="提示標記" FontWeight="SemiBold" Margin="0,10,0,8"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- 左側：一般標記 -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="一般標記" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,4"/>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                    <Button Content="➕ 新增" Padding="6,3" FontSize="11"
                                Click="AddReminder_Click"
                                Background="#4CAF50" Foreground="White" BorderThickness="0" Margin="0,0,6,0"/>
                                    <Button Content="🗑️ 刪除" Padding="6,3" FontSize="11"
                                Click="RemoveSelectedReminders_Click"
                                Background="#F44336" Foreground="White" BorderThickness="0"/>
                                </StackPanel>

                                <Border BorderBrush="#DDD" BorderThickness="1" 
        Height="100">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <ItemsControl x:Name="remindersList" ItemsSource="{Binding SelectedRole.Reminders}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border BorderBrush="#EEE" BorderThickness="0,0,0,1" Padding="6,4" Background="White">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="6"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>

                                                            <!-- 綁定到 ReminderItem.IsSelected -->
                                                            <CheckBox Grid.Column="0" 
                              IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"
                              VerticalAlignment="Center"/>

                                                            <!-- 綁定到 ReminderItem.Text -->
                                                            <TextBox Grid.Column="2" 
                             Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}" 
                             BorderThickness="0" 
                             Background="Transparent"
                             Padding="4,2"
                             FontSize="11"
                             VerticalAlignment="Center"/>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Border>
                            </StackPanel>

                            <!-- 右側：全局標記 -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="全局標記" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,4"/>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                    <Button Content="➕ 新增" Padding="6,3" FontSize="11"
                                Click="AddGlobalReminder_Click"
                                Background="#4CAF50" Foreground="White" BorderThickness="0" Margin="0,0,6,0"/>
                                    <Button Content="🗑️ 刪除" Padding="6,3" FontSize="11"
                                Click="RemoveSelectedGlobalReminders_Click"
                                Background="#F44336" Foreground="White" BorderThickness="0"/>
                                </StackPanel>

                                <Border BorderBrush="#DDD" BorderThickness="1" 
        Height="100">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <ItemsControl x:Name="globalRemindersList" ItemsSource="{Binding SelectedRole.RemindersGlobal}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border BorderBrush="#EEE" BorderThickness="0,0,0,1" Padding="6,4" Background="White">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="6"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>

                                                            <!-- 綁定到 ReminderItem.IsSelected -->
                                                            <CheckBox Grid.Column="0" 
                              IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"
                              VerticalAlignment="Center"/>

                                                            <!-- 綁定到 ReminderItem.Text -->
                                                            <TextBox Grid.Column="2" 
                             Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}" 
                             BorderThickness="0" 
                             Background="Transparent"
                             Padding="4,2"
                             FontSize="11"
                             VerticalAlignment="Center"/>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Border>
                            </StackPanel>
                        </Grid>

                        <Border BorderBrush="#DDD" BorderThickness="0,0,0,1" Margin="0,10"/>

                        <!-- 備註（原風味文字） -->
                        <TextBlock Text="備註" FontWeight="SemiBold" Margin="0,10,0,4"/>
                        <TextBox Text="{Binding SelectedRole.Flavor, UpdateSourceTrigger=PropertyChanged}" 
                     TextWrapping="Wrap" AcceptsReturn="True" Height="60"
                     Padding="6,4" BorderBrush="#CCC" BorderThickness="1" 
                     FontSize="11" VerticalScrollBarVisibility="Auto"/>

                        <!-- 底部說明 -->
                        <Border Background="#F0F8FF" Padding="12" Margin="0,15,0,0" CornerRadius="3">
                            <StackPanel>
                                <TextBlock Text="💡 編輯提示" FontWeight="Bold" FontSize="11" Margin="0,0,0,4"/>
                                <TextBlock TextWrapping="Wrap" FontSize="10" Foreground="#333">
                        • 標記 * 的欄位為必填，空白時會顯示紅色邊框<LineBreak/>
                        • 所有變更即時儲存，記得按「檔案 > 儲存」寫入檔案
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!-- 未選擇角色時的提示 -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedRole}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <TextBlock Text="📋" FontSize="72" HorizontalAlignment="Center" Opacity="0.3"/>
                    <TextBlock Text="請從左側選擇一個角色進行編輯" 
                   FontSize="16" Foreground="Gray" 
                   HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- 狀態列 -->
        <StatusBar Grid.Row="2" Background="#F0F0F0">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage, Mode=OneWay}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock>
                    <Run Text="選中: "/>
                    <Run Text="{Binding SelectedRole.Name, Mode=OneWay, TargetNullValue='無'}"/>
                </TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>