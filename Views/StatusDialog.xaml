<Window x:Class="BloodClockTowerScriptEditor.Views.StatusDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="新增狀態" 
        Height="450" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 標題 -->
        <TextBlock Grid.Row="0" 
                   Text="選擇要新增的狀態（可複選）" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Margin="0,0,0,15"/>

        <!-- 選項區 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- 預設狀態選項 -->
                <CheckBox x:Name="chkDrunk" 
                          Content="醉酒" 
                          Margin="0,0,0,10"
                          FontSize="14"/>
                <TextBlock Text="通常因善良角色影響而獲得。醉酒玩家會失去能力，訊息角色可能會得知錯誤的訊息，醉酒玩家不會得知自己醉酒。"
                           Margin="25,0,0,15"
                           TextWrapping="Wrap"
                           Foreground="Gray"
                           FontSize="12"/>

                <CheckBox x:Name="chkPoisoned" 
                          Content="中毒" 
                          Margin="0,0,0,10"
                          FontSize="14"/>
                <TextBlock Text="通常因邪惡角色影響而獲得。中毒玩家會失去能力，訊息角色可能會得知錯誤的訊息，中毒玩家不會得知自己中毒。"
                           Margin="25,0,0,15"
                           TextWrapping="Wrap"
                           Foreground="Gray"
                           FontSize="12"/>

                <CheckBox x:Name="chkInsane" 
                          Content="瘋狂" 
                          Margin="0,0,0,10"
                          FontSize="14"/>
                <TextBlock Text="玩家以合理的方式證明指定的內容。"
                           Margin="25,0,0,15"
                           TextWrapping="Wrap"
                           Foreground="Gray"
                           FontSize="12"/>

                <CheckBox x:Name="chkZombie" 
                          Content="活屍" 
                          Margin="0,0,0,10"
                          FontSize="14"/>
                <TextBlock Text="所有人以為你存活，但其實你已經死亡，仍然可以提名與投票並且不消耗遺言票，資訊角色可能得知錯誤的訊息。"
                           Margin="25,0,0,15"
                           TextWrapping="Wrap"
                           Foreground="Gray"
                           FontSize="12"/>

                <Separator Margin="0,10"/>

                <!-- 自訂選項 -->
                <CheckBox x:Name="chkCustom" 
                          Content="自訂狀態" 
                          Margin="0,15,0,10"
                          FontSize="14"
                          Checked="CustomCheckBox_Checked"
                          Unchecked="CustomCheckBox_Unchecked"/>

                <StackPanel x:Name="pnlCustom" 
                            Margin="25,0,0,0"
                            IsEnabled="False">
                    <TextBlock Text="狀態名稱:" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtCustomName" 
                             Height="30" 
                             Margin="0,0,0,10"/>

                    <TextBlock Text="狀態說明:" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtCustomSkill" 
                             Height="80" 
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- 按鈕區 -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,15,0,0">
            <Button Content="確定" 
                    Width="80" 
                    Height="32"
                    Margin="0,0,10,0"
                    Click="Confirm_Click"
                    IsDefault="True"/>
            <Button Content="取消" 
                    Width="80" 
                    Height="32"
                    Click="Cancel_Click"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>