<Window x:Class="BloodClockTowerScriptEditor.Views.ImportRolesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="匯入角色範本" 
        Height="400" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 標題 -->
        <TextBlock Grid.Row="0" 
                   Text="從 JSON 檔案匯入角色範本到資料庫"
                   FontSize="16" FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- 說明區 -->
        <Border Grid.Row="1" 
                Background="#F5F5F5" 
                Padding="15"
                CornerRadius="5">
            <StackPanel>
                <TextBlock Text="匯入說明：" FontWeight="Bold" Margin="0,0,0,10"/>

                <TextBlock TextWrapping="Wrap" Margin="0,0,0,5">
                    1. 點選「選擇檔案」按鈕選擇角色總表 JSON 檔案
                </TextBlock>

                <TextBlock TextWrapping="Wrap" Margin="0,0,0,5">
                    2. 系統會自動解析並匯入所有角色資料
                </TextBlock>

                <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                    3. 如果角色已存在，將會更新資料
                </TextBlock>

                <Border Background="White" Padding="10" CornerRadius="3" Margin="0,10,0,0">
                    <StackPanel>
                        <TextBlock Text="當前資料庫狀態：" FontWeight="Bold"/>
                        <TextBlock x:Name="txtDatabaseStatus" Text="載入中..." Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- 進度區 -->
        <StackPanel Grid.Row="2" Margin="0,20,0,0">
            <TextBlock x:Name="txtStatus" 
                       Text="請選擇要匯入的 JSON 檔案"
                       Margin="0,0,0,10"/>

            <ProgressBar x:Name="progressBar" 
                         Height="25"
                         Minimum="0" Maximum="100"
                         Visibility="Collapsed"/>
        </StackPanel>

        <!-- 按鈕區 -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">

            <Button Content="選擇檔案並匯入" 
                    Width="120" Height="35"
                    Click="SelectAndImport_Click"
                    Margin="0,0,10,0"/>

            <Button Content="關閉" 
                    Width="80" Height="35"
                    Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>