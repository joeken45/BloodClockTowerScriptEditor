<Window x:Class="BloodClockTowerScriptEditor.Views.SelectRoleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:BloodClockTowerScriptEditor.Converters"
        Title="從官方角色選擇" 
        Height="600" Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">

    <Window.Resources>
        <converters:TeamTypeConverter x:Key="TeamTypeConverter"/>

        <!-- 角色卡片樣式 -->
        <Style x:Key="RoleCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F8FF"/>
                    <Setter Property="BorderBrush" Value="#4A90E2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 搜尋與篩選區 -->
        <Border Grid.Row="0" Background="#F5F5F5" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 搜尋框 -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="搜尋：" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox x:Name="txtSearch" 
                             Width="300" 
                             Padding="5"
                             TextChanged="Search_TextChanged"/>
                    <TextBlock Text="（可搜尋中英文名稱、能力描述）" 
                               VerticalAlignment="Center" 
                               Foreground="Gray"
                               Margin="10,0,0,0"/>
                </StackPanel>

                <!-- 類型篩選 -->
                <WrapPanel Grid.Row="1">
                    <CheckBox x:Name="chkTownsfolk" Content="鎮民" IsChecked="True" 
                              Checked="Filter_Changed" Unchecked="Filter_Changed" Margin="0,0,15,0"/>
                    <CheckBox x:Name="chkOutsider" Content="外來者" IsChecked="True" 
                              Checked="Filter_Changed" Unchecked="Filter_Changed" Margin="0,0,15,0"/>
                    <CheckBox x:Name="chkMinion" Content="爪牙" IsChecked="True" 
                              Checked="Filter_Changed" Unchecked="Filter_Changed" Margin="0,0,15,0"/>
                    <CheckBox x:Name="chkDemon" Content="惡魔" IsChecked="True" 
                              Checked="Filter_Changed" Unchecked="Filter_Changed" Margin="0,0,15,0"/>
                    <CheckBox x:Name="chkTraveler" Content="旅行者" IsChecked="True" 
                              Checked="Filter_Changed" Unchecked="Filter_Changed" Margin="0,0,15,0"/>
                    <CheckBox x:Name="chkFabled" Content="傳奇" IsChecked="True" 
                              Checked="Filter_Changed" Unchecked="Filter_Changed" Margin="0,0,15,0"/>
                </WrapPanel>
            </Grid>
        </Border>

        <!-- 角色列表 -->
        <Border Grid.Row="1" BorderBrush="#DDD" BorderThickness="1,0,1,1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="rolesList" Padding="10">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource RoleCardStyle}" 
                                    MouseLeftButtonDown="RoleCard_Click"
                                    Cursor="Hand"
                                    Tag="{Binding}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- 角色圖片 -->
                                    <Border Grid.Column="0" 
                                            Width="70" Height="70"
                                            CornerRadius="5"
                                            Background="#F0F0F0"
                                            Margin="0,0,10,0">
                                        <Image Source="{Binding Image}" 
                                               Stretch="UniformToFill"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                                    </Border>

                                    <!-- 角色資訊 -->
                                    <StackPanel Grid.Column="1">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                            <TextBlock Text="{Binding Name}" 
                                                       FontSize="16" 
                                                       FontWeight="Bold"
                                                       Margin="0,0,10,0"/>
                                            <TextBlock Text="{Binding Team, Converter={StaticResource TeamTypeConverter}}" 
                                                       FontSize="12"
                                                       Foreground="White"
                                                       Background="#4A90E2"
                                                       Padding="5,2"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <TextBlock Text="{Binding Ability}" 
                                                   TextWrapping="Wrap"
                                                   Foreground="#555"
                                                   MaxHeight="60"
                                                   TextTrimming="CharacterEllipsis"/>

                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock Text="{Binding Edition}" 
                                                       FontSize="10"
                                                       Foreground="Gray"
                                                       Margin="0,0,10,0"/>
                                            <TextBlock Text="{Binding NameEng}" 
                                                       FontSize="10"
                                                       Foreground="Gray"
                                                       FontStyle="Italic"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- 底部按鈕 -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock x:Name="txtResultCount" 
                           Text="共 0 個角色"
                           VerticalAlignment="Center"
                           Margin="0,0,20,0"
                           Foreground="Gray"/>

                <Button Content="取消" 
                        Width="80" Height="35"
                        Click="Cancel_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>